<import src="../../../template/mine/mine.wxml" />

<!--头部-->

<!--bindscrolltoupper="refresh"-->
<scroll-view scroll-y="true" style="height:100vh;" bindscrolltolower="loadMore" bindscrolltoupper="refresh">
  <view class="head">

    <!--头像-->
    <image class="head_img" mode="aspectFill" src="{{msg.userAvater}}"></image>
    <view class="head_txt" bindtap="nato_myaccount">

      <!--名称-->
      <text class="head_name" style="margin-bottom:15px;">{{msg.userName}}</text>
      <text class="des_txt" style="margin-bottom:5px;">会员号：{{msg.userNum}}</text>
      <block wx:if="{{msg.bindPhone !='' && msg.bindPhone != null}}">
        <text class="des_txt">已绑定手机:{{msg.bindPhone}}</text>
      </block>
      <block wx:else>
        <text class="des_txt">未绑定手机</text>
      </block>
    </view>

    <!--右箭头-->
    <image src="../../../assets/images/right-errow.png" class="right_errow" mode="aspectFill"></image>
  </view>

  <!--我的钱包 xx俱乐部会长-->
  <view class="container">

    <!--我的钱包-->
    <view class="con_row" bindtap="toMyWallet">
      <view class="center">
        <image src="../../../assets/images/wallet.png" class="con_img"></image>
        <text class="head_name">我的钱包</text>
      </view>
      <image src="../../../assets/images/right-errow.png" class="right_errow2" mode="aspectFill"></image>
    </view>

  </view>

  <!--无报名记录-->
  <view wx:if="{{applyActCount==0}}">
    <view class="imgitem">
      <image src="../../../assets/images/empty@2x.png" class="empty_img"></image>
    </view>
    <view class="txtitem">
      <text class="t28rpx">暂无报名记录</text>
    </view>
  </view>

  <!--报名记录-->
  <view wx:else class="container">
    <view class="container_title con_title">
      <text>报名记录</text>
      <text class="con_total des_txt">共报名{{applyActCount}}场活动</text>
    </view>
    <view wx:for="{{dataList}}" wx:key="{{index}}">
      <template is="apply_act_item" data="{{item}}" />
    </view>
    <view wx:if="{{more == 1}}" style="text-align:center;font-size:12px;color:rgb(229,229,229);margin-bottom:30px;">
      <text>加载更多...</text>
    </view>
    <view wx:else style="text-align:center;font-size:12px;color:rgb(229,229,229);margin-bottom:30px;">
      <text>THE END</text>
    </view>
  </view>
</scroll-view>