
// pages/clubhome/clubhome.js
const App = getApp();
const clubApi = App.api('clubApi');
Page({
  data: {
    count: 10
  },

  onLoad: function (params) {
    this.getClubIndex(this);
    this.getMamberActivity(this);
  },

  /**
   * 获取俱乐部主页
   */
  getClubIndex: function () {
    const that = this;
    let param = {}
    let data = {
      club_no: 30328
    }
    param.data = data;
    clubApi.clubIndex(param, (res) => {
      console.log(res.data.club);
      that.setData({
        club: res.data.club
      })
    });
  },

  /**
   * 获取用户活动信息
   */
  getMamberActivity: function () {
    const that = this;
    let param = {}
    let data = {
      user_id: 14389,
      start: 0,
      count: that.data.count,
      exceptProxyAct: 0
    }
    param.data = data;
    clubApi.clubActs(param, (res) => {

      let data = res.data;
      if (data) {
        let activities = data.activities;
        activities.forEach((e) => {
          e.flag = App.util.compareDate(new Date(e.end));
          e.begin = App.util.formatTime2(e.begin);
          e.end = App.util.formatTime2(e.end);
        })
        that.setData({
          activity: activities,
          count: that.data.count + 10
        })
      }
    })
  },

  lower: function (e) {
    this.getMamberActivity()
  },
  
  actDetail:function(e){
    App.wxService.navigateTo('activity/act_detail/act_detail', { activityID: e.currentTarget.dataset.actid })
  },
  toClubInformation: function (e) {
    App.wxService.navigateTo('club/clubInformation/clubInformation', { club_no: 30328 })
  }
})
