// pages/mine/me/me.js
const app = getApp();

Page({
  data: {
    isCountDown: false,
    dataList: [],
    start: '0',
    more: 0,
    applyActCount: 0,
    msg: {
      userName: app.session.getUserInfo().nick,
      userAvater: app.session.getUserInfo().avatar,
      userNum: app.session.getUserInfo().num,
      bindPhone: app.session.getUserInfo().mobile,
    }
  },
  onLoad: function () {
    this.getUserApplyList();
  },
  //请求用户活动报名记录
  getUserApplyList: function () {//请求报名记录
    var that = this;
    app.mineApi.userApplyList({
      data: {
        // failToast: true,
        // successToast: true,
        user_id: app.session.getUserInfo().userID,//app.session.getUserInfo().userID //12219 //10237
        start: that.data.start,
        count: 30
      },
    },
      function (res) {
        console.log("success");
        var dataArr = res.data.activities;
        var dataList = that.data.dataList;
        //合并数组，用于上拉加载更多
        var renderArr = that.data.start == '0' ? dataArr : dataList.concat(dataArr);
        that.setData({
          dataList: renderArr,
          start: res.data.start,
          more: res.data.more,
          applyActCount: res.data.applyActCount,
        })
        if (!that.data.isCountDown) {
          // that.countdown();
          that.setData({
            isCountDown: true
          })
        }
      },
      function (res) {
        console.log("fail");
      },
      function (res) {
        console.log("complete");
        console.log(res);
        app.util.getErrorMsg(res);
      }

    )
  },

  // 页面上拉触底事件的处理函数，用于上拉加载更多
  loadMore: function () {
    if (this.data.more == 1) {
      this.getUserApplyList();
    }
    return false;
  },
  refresh: function () {
    this.setData({
      start: '0',
    })
    this.getUserApplyList();
  },
  
  goToApplyDetail: function (e) {
    // app.wxService.navigateTo('mine/myaccount/myaccount')
    app.wxService.navigateTo('activity/act_detail/act_detail')
  },
  changeApply: function (e) {
    app.wxService.navigateTo('activity/act_detail/act_detail')
  },
  cancelApply: function (e) {
    app.wxService.navigateTo('mine/helpenlist/helpenlist')
  },
  toPay: function (e) {
    app.wxService.navigateTo('activity/payment/payment')
  },
  nato_myaccount: function (e) {
    wx.navigateTo({
      url: '../myaccount/myaccount'
    })
  },
  toMyWallet: function (e) {
    app.wxService.navigateTo('mine/myaccount/myaccount')
  },
  countdown: function () {
    countdown(this);
  }

})

function countdown(that) {
  var list = that.data.dataList

  // for (var i = 0; i < list.length; i++) {
  //   var item = list[i];
  //   if (item.payStatus == 3) {

  //   }
  // }
  console.log("countdown");
  var time = setTimeout(function () {
    that.setData({
      dataList: list
    });
    that.countdown();
  }
    , 1000)
}

// 时间格式化输出
function dateformat(micro_second) {
  var now = new Date().getTime();
  var remain_time = micro_second - now;
  // 秒数
  var second = Math.floor(micro_second / 1000);
  // 分钟位
  var min = Math.floor(second / 60);
  // 秒位
  var sec = second % 60;
  return min + ":" + sec;
}