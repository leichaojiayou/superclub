<view  class="body" style="height:1000rpx">


<!--第二组:报名选项-->
<view class="body_1"   wx:for="{{itemArray}}" wx:for-index="indexX">
<text class="body_txt">{{item.fieldName}}</text>

<view wx:if="{{item.readonly == 1 }}" style="text-align:right;margin-right:29rpx;">
<input disabled="ture" placeholder="{{item.currentValue}}" placeholder-style="placeholder"/>
</view>

<view wx:elif="{{item.fieldType == 1 }}" style="text-align:right;margin-right:29rpx;">
<input  bindinput="didFieldTextChanged" id="{{indexX}}"  placeholder="{{item.currentValue}}" placeholder-style="placeholder"/>
</view>

<view wx:else style="text-align:right;margin-right:29rpx;">
<picker  bindchange="didPickerChanged" id="{{indexX}}" range="{{item.ranges}}" value="{{index}}">
{{item.currentValue}} 
</picker>
</view>

</view>

<!--第三组:支付状态-->
<view class="body_1" wx:if="{{howToPay > 1}}" wx:for="{{payArray}}" wx:for-item="payObj" wx:for-index="indexPay" >
<text class="body_txt">{{payObj.fieldName}}</text>
<view  style="text-align:right;margin-right:29rpx;">
<input disabled="ture" placeholder="{{payObj.defaultValue}}" placeholder-style="placeholder"/>
</view>
</view>

<!--第四组:分组-->
<view class="body_1">
<text class="body_txt">{{fieldGroup.fieldName}}</text>
<view style="text-align:right;margin-right:29rpx;">
<picker  bindchange="didGroupNameChanged"  range="{{fieldGroup.ranges}}" value="{{index}}">
{{fieldGroup.currentValue}} 
</picker>
</view>
</view>


<view style="margin:60rpx 30rpx 0 30rpx;">
<button bindtap="tapSaveButton" type="primary">保存</button>
</view>
<view style="margin:30rpx 30rpx 0 30rpx;">
<button wx:if="{{checkStatus != '' && checkStatus != 'null' }}" bindtap="tapRefuseButton" >{{checkStatus}}</button>
</view>


</view>














<view style="height:978rpx;background-color:rgb(246,246,246)"></view>


<view class="phone" hidden="{{hiddenAlert}}" style="opacity:1;pointer-events:auto;">
    <view class="phone-dialog">
      <view class="phone-text">
        确定拒绝”{{nick}}“的报名吗？Ta将不能再报名本次活动
      </view>
      <view class="phone-box">
        <input class="phone-input" maxlength="30" type="number" focus="{{getFocus}}" bindinput="didInputChanged" value="{{phoneNum}}" placeholder="输入" placeholder-style="font-size:28rpx;letter-spacing:1rpx;"></input>
      </view>
      <view class="phone-button">
        <view class="phone-hehe">
          <button class="phone-btn phone-cancel" bindtap="tapCancelAlert">取消</button>
          <button class="phone-btn phone-canadd" bindtap="tapSureAlert">确定</button>
        </view>
      </view>
    </view>
  </view>