<scroll-view scroll-y="true" style="height:100vh">
  <!-- 头框 -->
  <view class="bigview">
    <!-- 名称  会长 副会长 -->
    <view class="itemView" wx:if="{{club.roleType === 2 || club.roleType === 3}}" bindtap="setClubName">
      <text>名称</text>
      <view class="itemView_foot">
        <view class="foot_text_view">
          <text class="bigsize_1" wx:if="{{!modifyTitle}}">{{club.title}}</text>
          <text class="bigsize_1"wx:else>{{modifyTitle}}</text>
        </view>
        <image class="icon_image" src="{{page.img}}"></image>
      </view>
    </view>
    <!-- 名称  管理员 会员 非会员 -->
    <view wx:else class="itemView1">
      <view class="itemView_hear">
        <text>名称</text>
      </view>
      <view class="itemView_foot1">
        <text class="bigsize ">{{club.title}}</text>
      </view>
    </view>
    <!-- ID 会长 副会长 -->
    <view class="itemView" wx:if="{{club.roleType === 2 || club.roleType === 3}}">
      <text>ID</text>
      <view class="itemView_foot">
        <view class="foot_text_view">
          <text class="bigsize">{{club.clubID}}</text>
        </view>
      </view>
    </view>
    <!-- ID  管理员 会员 非会员 -->
    <view wx:else class="itemView1">
      <view class="itemView_hear">
        <text>ID</text>
      </view>
      <view class="itemView_foot1">
        <text class="bigsize ">{{club.clubNo}}</text>
      </view>
    </view>
    
    <!-- logo 会长 副会长 -->
    <view class="itemView " style="height:190rpx" wx:if="{{club.roleType === 2 || club.roleType === 3}}"
          bindtap="setClubLogo">
      <text>Logo</text>
      <view class="itemView_foot ">
        <view class="foot_text_view ">
          <image class="logo_image " wx:if="{{!clubLogo}}" src="{{club.logo}} "></image>
          <image class="logo_image " wx:else src="{{clubLogo}}"></image>
        </view>
        <image class="icon_image " src="{{page.img}} "></image>
      </view>
    </view>

    <!-- logo  管理员 会员 非会员 -->
    <view wx:else class="itemView1" style="height:190rpx">
      <view class="itemView_hear">
        <text>Logo</text>
      </view>
      <view class="itemView_foot1">
        <image class="logo_image " src="{{club.logo}}"></image>
      </view>
    </view>

    <!-- 星级 会长 副会长 -->
    <view class="itemView " wx:if="{{club.roleType === 2 || club.roleType === 3}}" style="border-bottom: 0;"
          bindtap="setGrade">
      <text>星级</text>
      <view class="itemView_foot ">
        <view class="foot_text_view ">
          <image class="start_image " src="{{page.club_start_img}} "></image>
          <text class="bigsize ">{{club.score}}</text>
        </view>
        <image class="icon_image " src="{{page.img}} "></image>
      </view>
    </view>

    <!-- 星级  管理员 会员 非会员 -->
    <view wx:else class="itemView1" bindtap="setGrade">
      <view class="itemView_hear">
        <text>星级</text>
      </view>
      <view class="itemView_foot1" style="width: 539rpx;">
        <view>
          <image class="start_image" src="{{page.club_start_img}} "></image>
          <text class="bigsize">{{club.score}}</text>
        </view>
        <view style="margin-right: 30rpx;">
          <image class="icon_image " src="{{page.img}} "></image>
        </view>
      </view>
    </view>

  </view>

  <!-- 成立时间之类资料框 -->
  <view class="bigview ">
    <!-- 地点 会长 副会长 -->
    <view class="itemView" wx:if="{{club.roleType === 2 || club.roleType === 3}}" bindtap="setAddress">
      <text>地点</text>
      <view class="itemView_foot ">
        <view class="foot_text_view ">
          <text class="bigsize" wx:if="{{modifyAddress==null}}">{{club.city.province}}{{club.city.cityName}}</text>
          <text class="bigsize" wx:else>{{modifyAddress}}</text>
        </view>
        <image class="icon_image " src="{{page.img}} "></image>
      </view>
    </view>

    <!-- 地点  管理员 会员 非会员 -->
    <view wx:else class="itemView1">
      <view class="itemView_hear">
        <text>地点</text>
      </view>
      <view class="itemView_foot1">
        <text class="bigsize">{{club.city.province}}{{club.city.cityName}}</text>
      </view>
    </view>

    <!-- 主打项目 会长 副会长 -->
    <view class="itemView" wx:if="{{club.roleType === 2 || club.roleType === 3}}" style="border-bottom: 0;"
          bindtap="setProjects">
      <text>主打项目</text>
      <view class="itemView_foot">
        <view class="foot_text_view">
          <block wx:for="{{modifyFeatures==null?club.features:modifyFeatures}}" wx:key="index">
            <text class="icon_text">{{item.name}}</text>
          </block>
        </view>
        <image class="icon_image " src="{{page.img}} "></image>
      </view>
    </view>

    <!-- 主打项目  管理员 会员 非会员 -->
    <view wx:else class="itemView1" style="border-bottom: 0;">
      <view class="itemView_hear">
        <text>主打项目</text>
      </view>
      <view class="itemView_foot1">
        <block wx:for="{{club.features}}" wx:key="index">
          <text class="icon_text1">{{item.name}}</text>
        </block>
      </view>
    </view>

  </view>

  <!-- 俱乐部设置框 -->
  <view class="bigview" wx:if="{{club.roleType != 0 || club.roleType != 1 }}">
    <view class="itemView" wx:if="{{club.roleType != 4}}" bindtap="setJoinWay">
      <text>设置加入方式</text>
      <view class="itemView_foot " wx:if="{{modifyNeedJoinCheck==null}}">
        <view class="foot_text_view " wx:if="{{club.needJoinCheck === 0}}">
          <text class="bigsize ">允许任何人加入</text>
        </view>
        <view class="foot_text_view "wx:else>
          <text class="bigsize ">需验证加入</text>
        </view>
        <image class="icon_image " src="{{page.img}} "></image>
      </view>
      <view class="itemView_foot "wx:else>
        <view class="foot_text_view " wx:if="{{modifyNeedJoinCheck=== 0}}">
          <text class="bigsize ">允许任何人加入</text>
        </view>
        <view class="foot_text_view "wx:else>
          <text class="bigsize ">需验证加入</text>
        </view>
        <image class="icon_image " src="{{page.img}} "></image>
      </view>
    </view>

    <!-- 收款账户 -->
    <view class="itemView " style="border-bottom: 0; " wx:if="{{club.roleType != 0 || club.roleType != 1 }}"
          bindtap="setAccountGather">
      <text>收款账户</text>
      <!-- modifyPayeeType -->
      <view class="itemView_foot " wx:if="{{modifyPayeeType==null}}">
        <view class="foot_text_view " wx:if="{{club.payeeType === 1}}">
          <text class="bigsize ">会长账户</text>
        </view>
        <view class="foot_text_view "wx:else>
          <text class="bigsize ">管理员代收</text>
        </view>
        <image class="icon_image " src="{{page.img}} "></image>
      </view>
      <view class="itemView_foot "wx:else>
        <view class="foot_text_view " wx:if="{{modifyPayeeType === 1}}">
          <text class="bigsize ">会长账户</text>
        </view>
        <view class="foot_text_view "wx:else>
          <text class="bigsize ">管理员代收</text>
        </view>
        <image class="icon_image " src="{{page.img}} "></image>
      </view>
    </view>

  </view>

  <!-- 俱乐部管理员成员 -->
  <view class="bigview" wx:if="{{club.roleType === 2 || club.roleType === 3}}">
    <view wx:if="{{club.roleType === 2}}" class="itemView" bindtap="setViceChariman">
      <text>任免副会长</text>
      <view class="itemView_foot ">
        <image class="icon_image " src="{{page.img}} "></image>
      </view>
    </view>
    <view class="itemView" bindtap="setManager">
      <text>任免管理员</text>
      <view class="itemView_foot ">
        <image class="icon_image " src="{{page.img}} "></image>
      </view>
    </view>

    <!-- 移除成员 -->
    <view class="itemView " style="border-bottom: 0;" wx:if="{{club.roleType != 0 || club.roleType != 1 }}"
          bindtap="removeMember">
      <text>移除会员</text>
      <view class="itemView_foot ">
        <image class="icon_image " src="{{page.img}} "></image>
      </view>
    </view>
  </view>
  
  <!-- 俱乐部简介 -->
  <view class="bigview">
    <view class="itemView" wx:if="{{club.roleType === 2 || club.roleType === 3}}" bindtap="setDeclaration">
      <text>宣言</text>
      <view class="itemView_foot ">
        <view class="foot_text_view ">
          <text class="bigsize_2">{{modifySlogan==null?club.slogan:modifySlogan}}</text>
        </view>
        <image class="icon_image " src="{{page.img}} "></image>
      </view>
    </view>
    <!-- 宣言  管理员 会员 非会员 -->
    <view wx:else class="itemView2">
      <view class="itemView_hear">
        <text>宣言</text>
      </view>
      <text class="bigsize1">{{club.slogan}}</text>
    </view>

    <!-- 简介   会长 副会长 -->
    <view class="itemView" style="border-bottom: 0;" wx:if="{{club.roleType === 2 || club.roleType === 3}}"
          bindtap="setDescription">
      <text>简介</text>
      <view class="itemView_foot ">
        <view class="foot_text_view ">
          <text class="bigsize_2">{{modifyDescription==null?club.description:modifyDescription}}</text>
        </view>
        <image class="icon_image " src="{{page.img}} "></image>
      </view>
    </view>

    <!-- 简介  管理员 会员 非会员 -->
    <view wx:else class="itemView2" style="border-bottom: 0;">
      <view class="itemView_hear">
        <text>简介</text>
      </view>
      <text class="bigsize1">{{club.description}}</text>
    </view>
  </view>

  <!-- 俱乐部成员统计 -->
  <view class="bigview " bindtap="tips">
    <view class="itemView" style="margin-right:30rpx;height:128rpx;">
      <view style=" display: flex;align-items: center ; ">
        <image class="statistics_icon " src="{{page.club_statistics_icon}} "></image>
        <text >俱乐部成员统计({{club.memberCount}})</text>
      </view>
      <view class="itemView_foot" style="margin-right: 0; ">
        <image class="icon_image" src="{{page.img}}"></image>
      </view>
    </view>
  </view>
  <!-- 按钮框 -->
  <view class="buttonview ">
    <button wx:if="{{club.roleType === 2}}" bindtap="deleteClub">删除俱乐部</button>
    <button wx:elif="{{club.roleType != 0 }}" bindtap="quitClub">退出俱乐部</button>
    <button wx:else style="border: 1rpx solid rgb(61, 209, 164);background-color: rgb(61, 209, 164);" bindtap="oinClub">
    加入俱乐部
    </button>
  </view>
</scroll-view>