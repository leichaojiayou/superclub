
<!-- pages/summary/summary.wxml -->
<form bindsubmit="sbmitForm">
  <view class="header">
    <textarea name="description" placeholder="俱乐部简介" maxlength="-1" auto-height="true" placeholder-style="font-size:34rpx;Letter-spacing:-0.8rpx;rgb(191,191,191)"
              class="textarea" value="{{description}}"  />
  </view>
  <view class="btn">
    <button type="primary" form-type="submit" style="background:rgb(61, 209, 164);">保存</button>
  </view>
</form>