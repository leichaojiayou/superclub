page {
  background-color: rgb(246, 246, 246);
}

.big_view {
  background-color: rgb(255, 255, 255);
  font-size: 32rpx;
  border-top: 1rpx solid rgb(230, 230, 230);
}

.item_view {
  border-bottom: 1rpx solid rgb(230, 230, 230);
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
  line-height: 44rpx;
}

.item_top_view {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-top: 29rpx;
  margin-left: 29rpx;
  margin-right: 30rpx;
}

.item_mid_view {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  /*margin-top: 19rpx;*/
  margin-left: 30rpx;
  margin-right: 29rpx;
}

.item_bottom_view {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  /*margin-top: 21rpx;*/
  margin-left: 30rpx;
  margin-bottom: 28rpx;
  margin-right: 30rpx;
}

.bigsize_text {
  color: rgb(26, 26, 26);
  font-size: 32rpx;
}

.midsize_text {
  color: rgb(142, 142, 142);
  font-size: 26rpx;
  line-height: 34rpx;
}

.midsize_text3 {
  color: rgb(142, 142, 142);
  font-size: 28rpx;
  line-height: 34rpx;
  margin-top: 22rpx;
}

.price_text {
  font-size: 38rpx;
}

.date_text {
  color: rgb(191, 191, 191);
  font-size: 22rpx;
}

/* 暂无交易记录 */

.no_image {
  margin-top: 360rpx;
  width: 100rpx;
  height: 100rpx;
}

.item_wu {
  width: 750rpx;
  text-align: center;
}

.wu_text {
  font-size: 26rpx;
  letter-spacing: -0.6rpx;
  color: rgb(142, 142, 142);
}

.bg {
  background: #fff;
  margin-bottom: 12rpx;
}

.choose_user {
  padding: 11rpx 41rpx 35rpx 21rpx;
  display: flex;
  justify-content: space-between;
  flex-flow: wrap;
}

.choose_user_item {
  width: 216rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-top: 20rpx;
  border-radius: 6rpx;
  border: 1rpx solid rgb(60, 209, 164);
  font-size: 28rpx;
  letter-spacing: -0.6rpx;
}
