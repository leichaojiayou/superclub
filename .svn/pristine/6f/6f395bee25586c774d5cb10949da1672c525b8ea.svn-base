<view class="top_view">
  <text wx:if="{{statu==1}}" class="smartsize">{{page.top_text1}}<text class="smartsize" style="color: rgb(61,209,164);">{{Select_number}}</text>{{page.top_text2}}{{Total_SMS-Select_number}}{{page.top_text3}}</text>
<text wx:if="{{statu==2}}" class="smartsize">{{page.top_next_text}}</text>
</view>
<view class="mid_view">
  <view class="checkbox_view">
    <icon bindtap="bindSelectAll" class="group_icon" size="26" type="{{checkbox_allStatus ? 'success' : 'circle'}}" style="{{statu==2 ? 'opacity:0.4' : ''}}"/>
    <text class="checkbox_text_view">{{page.checkbox_all_text}}</text>
  </view>
  <view wx:for="{{list}}" class="group_view">
    <view bindtap="" class="checkbox_view">
      <icon bindtap="bindgroup_Select" data-id="{{index}}" class="group_icon" size="26" type="{{item.group_Status ? 'success' : 'circle'}}" style="{{statu==2 ? 'opacity:0.4' : ''}}" />
      <text class="checkbox_text_view">{{item.group_text}}</text>
    </view>
    <view wx:for="{{item.group_list}}" wx:for-index="item_index" bindtap="" class="checkbox_group_view">
      <icon  bindtap="bind_Select" data-item="{{item_index}}" data-id="{{index}}" class="item_icon" size="26" type="{{item.check_Status ? 'success' : 'circle'}}" style="{{statu==2 ? 'opacity:0.4' : ''}}"/>
      <view class="item_mid_view">
        <image class="item_img" src="{{item.img}}"></image>
        <view class="item_right_view">
          <text>{{item.user_name}}</text>
          <text wx:if="{{item.user_text!=''}}" class="smart_text_size">{{item.user_text}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
<button bindtap="{{Setting ? 'button_Select' : ''}}" wx:if="{{statu==1}}" class="button" style="{{Setting ?  '': 'background-color: rgba(61, 209, 164, 0.4);' }}">下一步</button>