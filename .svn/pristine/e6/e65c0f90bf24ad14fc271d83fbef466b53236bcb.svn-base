.detail_img {
  opacity: 85%;
  /*width: 100%;*/
  height: 175px;
}

.detail_title_lay {
  white-space: normal;
  padding: 10px 0 8px 0;
}

.detail_con, .detail_map {
  display: flex;
  flex-direction: column;
}

.detail_con {
  background-color: #fff;
  padding: 0 17px 0 17px;
}

.detail_msg, .detail_input {
  display: flex;
  flex-direction: row;
}

.detail_msg {
  justify-content: space-between;
  margin-bottom: 15px;
}

.detail_input {
  position: relative;
  align-items: center;
  padding-bottom: 10px;
  margin-top: 10px;
}

.detail_txt {
  margin-right: 15px;
  width: 55px;
}

.detail_map {
  position: absolute;
  right: 0px;
  align-items: center;
}

.detail_row_right {
  flex-grow: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.detail_lineh {
  position: absolute;
  bottom: 0px;
  width: 80%;
  border-bottom: 1px solid rgb(230, 230, 230);
}

.detail_linev {
  position: absolute;
  border-left: 1px solid rgb(230, 230, 230);
  height: 20px;
  width: 1px;
  top: 0;
  right: 40px;
}
.sort {
  display: flex;
  height: 49px;
  align-items: center;
  font-size: 14px;
  letter-spacing: -0.3px;
  justify-content: space-around;
}
.textarea {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/*textarea里面的样式*/

.textarea1 {
  white-space: normal;
  /*height: 116.5px;*/
  overflow: scroll;
  font-size: 17px;
  line-height: 25px;
  letter-spacing: -0.4px;
  color: rgb(17, 17, 17);
  background-color: rgb(255, 255, 255);
  padding: 15px;
}

.textarea1_case_titxt{
  font-size: 17px;
  letter-spacing: -0.4px;
}
.textarea1_case_titxt2{
  font-size: 13px;
  letter-spacing: -0.3px;
  color:rgb(142,142,142);
}
.textarea1_case_destxt{
  font-size: 14px;
}
.textarea1_case_com_img{
  width:16px;
  height:9px;
  -webkit-transform: rotate(90deg);
}
.textarea1_case_money{
  font-size: 49rpx;
  letter-spacing: -1rpx;
  color: rgb(61, 209, 164);
  margin-left: 44rpx;
}
.textarea1_case_sign{
  font-size: 38rpx;
  letter-spacing: -1rpx;
  color: rgb(255, 255, 255);
  background-color: rgb(61, 209, 164);
  padding: 26rpx 50rpx 25rpx 50rpx;
  border-radius: 10rpx;
}

.textarea1_case_com{
  padding-bottom:0px; 
  background-color:rgb(255,255,255);
}

.textarea1_case_img{
  width: 40px;
  height: 40px;
  border-radius: 20px;
  border: 1px solid rgb(180,180,180);
  float: left;
}
.textarea1_case{
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  padding: 15px;
  align-items: center;
}
/*底部按钮*/

.bottom{
  display: flex;
  position: absolute;
  bottom: 0rpx;
width: 100%;
justify-content: space-between;
align-items: center;
background-color: white;
}
.btn1{
  margin:10rpx 22rpx 10rpx 0;
}




.textarea_com{
  padding: 15px 15px 5px 15px;
  background-color: rgb(255, 255, 255);
}
.textarea_com_right{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 13px 0 0 15px;
}
.textarea_com_right_text{
  word-break:break-all;
  white-space: normal;
  background-color: rgb(255, 255, 255);
  font-size: 15px;
  letter-spacing: -0.4px;
  text-align: justify;
  line-height: 22px;
  padding: 0 15px 15px 70px;
  border-bottom: 1px solid rgb(230, 230, 230);
}