
<!--pages/apply_paged/apply_paged.wxml-->
<scroll-view scroll-y="true" class="all_scr">
<!--头图像-->
<view class="header_imgss">
  <swiper>
  <swiper-item><image src="../../../assets/images/Kitty.png"></image></swiper-item>
   <swiper-item><image src="../../../assets/images/Kitty.png"></image></swiper-item>
  </swiper>
  </view>
<view class="detail_con">

  <!--title文字-->
  <view class="detail_title detail_title_lay">
    <text>{{item.title}}</text>
  </view>

  <!--信息-->
  <view class="des_txt detail_msg">
    <text>{{item.name}}</text>
    <view>
      <text style="margin-right:12px;">{{item.pudata}}</text>
      <text style="margin-right:12px;">阅读{{item.readed}}</text>
      <text>分享{{item.like}}</text>
    </view>
  </view>

  <!--详细信息-->
  <view class="detail_input">
    <text class="des_txt detail_txt">活动地点</text>
    <view class="detail_row_right">

      <!--地点-->
      <text>{{item.place}}</text>

      <!--线-->
      <view class="detail_linev"></view>
      <view class="detail_lineh"></view>
    </view>
    <view class="detail_map">
      <image src="../../../assets/images/map.png" style="width:14px;height:17px"></image>
      <text class="des_txt">地图</text>
    </view>
  </view>
  <view class="detail_input">
    <text class="des_txt detail_txt">活动时间</text>
    <view class="detail_row_right">

      <!--时间-->
      <text>{{item.activity_data}}</text>
      <view class="detail_lineh"></view>
    </view>
  </view>
  <view class="detail_input">
    <text class="des_txt detail_txt">活动费用</text>
    <view class="detail_row_right">

      <!--费用-->
      <text class="green_txt">{{item.cost}}</text>
      <view class="detail_lineh"></view>
    </view>
  </view>
  <view class="detail_input">

    <!--主办方-->
    <text style="letter-spacing:0.4em;" class="des_txt detail_txt">主办方</text>
    <view class="detail_row_right">
      <text>{{item.sponsor}}</text>
    </view>

    <!--箭头-->
    <image src="../images/right-errow.png" style="width:14px;height:17px" class="detail_map"></image>
  </view>
</view>

<!--详情 报名须知 费用循环-->
<view class="sort">
  <text class="sort1" bindtap="changecolor" id="0" style="border-bottom:4px solid {{status==0?'rgb(61, 209, 164)':'rgb(246, 246, 246)'}};">详情</text>
  <text class="sort1" bindtap="changecolor" id="1" style="border-bottom:4px solid {{status==1?'rgb(61, 209, 164)':'rgb(246, 246, 246)'}};">报名须知</text>
  <text class="sort1" bindtap="changecolor" id="2" style="border-bottom:4px solid {{status==2?'rgb(61, 209, 164)':'rgb(246, 246, 246)'}};">费用</text>
</view>

<!--textarea-->
<view class="textarea"  wx:if="{{status==0}}">
  <text class="textarea1" scroll-y="true">{{holder0}}</text>
</view>
<view class="textarea"  wx:if="{{status==1}}">
  <text class="textarea1" scroll-y="true">{{holder1}}</text>
</view>
<view class="textarea"  wx:if="{{status==2}}">
  <text class="textarea1" scroll-y="true">{{holder2}}</text>
</view>
</scroll-view>









<!--已报名 修改报名按钮-->
<view class="textarea_foot" bindtap="changebtn">
  <text class="txt_textarea">已报名</text>
  <button type="primary" class="btn_textarea">修改报名</button>
</view>


