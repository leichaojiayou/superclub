
<!--pages/add_numbers/add_numbers.wxml-->
<!--票价-->
<view class="line0">
  <view style="margin-right:217rpx;">
    <text class="body_txt">{{item.t1}}</text>
  </view>
<view>
  <view style="text-align:right;">
    <text class="t3">{{item.price}}</text>
  </view>
  <view>
    <text class="t4"  style="color:rgb(141,141,141)">{{item.t2}}</text>
  </view>
</view>
<view class="img_item">
<image src="{{rightarrow}}" class="img"></image>
</view>
</view>


<view class="body">
<!--昵称-->
<view class="body_1">
<text class="body_txt">昵称</text>
<view style="text-align:right;margin-right:29rpx;">
<input  placeholder="输入昵称" placeholder-style="placeholder"/>
</view>
</view>
<!--性别-->
<view class="body_1" style="padding-right:49rpx;">
<text class="body_txt">性别</text>
<view style="text-align:right;margin-right:29rpx;">
<picker bindchange="bindPickerChange" range="{{array}}" value="{{index}}">
        {{array[index]}}
</picker>
</view>
<view style="position: absolute;top:23rpx;right: 31rpx;">
<image src="{{rightarrow}}" class="img"></image>
</view>
</view>
<!--手机-->
<view class="body_1">
<text class="body_txt">手机</text>
<view style="text-align:right;margin-right:29rpx;">
<input type="number" placeholder="请填写手机" placeholder-style="placeholder"/>
</view>
</view>
<!--真实姓名-->
<view class="body_1">
<text class="body_txt">真实姓名</text>
<view style="text-align:right;margin-right:29rpx;">
<input  value="李希光" placeholder-style="placeholder"/>
</view>
</view>
<!--身份证号-->
<view class="body_1">
<text class="body_txt">身份证号</text>
<view style="text-align:right;margin-right:29rpx;">
<input  placeholder="输入" placeholder-style="placeholder"/>
</view>
</view>
<!--骑行服码数-->
<view class="body_1" style="padding-right:49rpx;">
<text class="body_txt">骑行服码数(必选*)十字</text>
<view style="text-align:right;margin-right:29rpx;">
<picker bindchange="bindPickerChange1" range="{{array1}}" value="{{index1}}">
        {{array1[index1]}}
</picker>
</view>
<view style="position: absolute;top:23rpx;right: 31rpx;">
<image src="{{rightarrow}}" class="img"></image>
</view>
</view>

</view>

<view class="foot">
<text class="body_txt">紧急联系人手机号+字</text>
<view style="margin-top:29rpx;border:">
<input placeholder="输入" placeholder-style="placeholder1"/>
</view>
</view>

<!--保存按钮-->

<view style="margin:59rpx 30rpx 0 30rpx;">
<button type="primary">保存</button>
</view>



<view style="height:130rpx;background-color:rgb(246,246,246)"></view>