<scroll-view style="height:92vh;" scroll-y="true">

  <!-- topview -->
  <view class="top_view">
    <text class="bigsize_text">{{remove_text}}</text>
    <view class="top_item_view">
      <text class="bigsize_text">{{remove}}</text>
      <image class="right-arrow" src="{{icon_img}}"></image>
    </view>
  </view>

  <!-- mid循环列 -->
  <view style="border-bottom:1rpx solid #e6e6e6">
    <view wx:for="{{members}}" wx:for-item="m" wx:key="mi">
      <view class="for_item_top_view" wx:if="{{m.users.length != 0}}">
        <text class="list_top_size_text">{{m.roleName}} ({{m.users.length}})</text>
      </view>
      <view class="item_view" wx:for="{{m.users}}" wx:key="index" catchtap="select" data-userid="{{item.userID}}">
        <view class="forlist_item_view">
          <icon class="item_icon" size="26" wx:if="{{item.flag == true}}" type="success" />
          <icon class="item_icon" size="26" wx:else type="circle" />
          <view style="border-top:1rpx solid #e6e6e6;display:flex;align-items:center;padding: 30rpx 0;width:90%">
            <image src="{{item.avatar}}" class="item_img"></image>
            <text class="bigsize_text" style="margin-left: 27rpx;">{{item.nick}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</scroll-view>
<view class="select-bar">
  <view class="foot_view">
    <text class="list_item_text1" style="color: rgb(26, 26, 26);" bindtap="cancel">取消</text>
    <text class="list_item_text1" bindtap="ensure">确定</text>
  </view>
</view>