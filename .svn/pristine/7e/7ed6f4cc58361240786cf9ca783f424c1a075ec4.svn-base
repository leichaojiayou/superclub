@import "../../../../template/toasts/toasts.wxss";
page {
  color: rgb(0, 0, 0);
}

/*搜索view*/

.search_view {

  align-items: center;
  margin: 20rpx 35rpx 20rpx 35rpx;
}

.search_view input {
  background-color: rgb(240, 240, 240);
  text-align: center;
}

.psection {
  background: url(https://cdn.51julebu.com/xiaochengxu/image/search.png) no-repeat;
  color: rgb(142, 142, 142);
  font-size: 25rpx;
  background-size: 25rpx;
  background-position: 280rpx;
}


.top_view {
  padding: 0 30rpx 0 28rpx;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}

.top_item_view {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.for_item_top_view {
    align-items: center;
  height: 48rpx;
}

.forlist_item_view {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
  /*border-top: 1rpx solid rgb(230, 230, 230);*/
  background: #fff;
}

.mid_view {
  border-bottom: 1rpx solid rgb(230, 230, 230);
}

/*大字体*/

.bigsize_text {
  font-size: 32rpx;
  margin-right:30rpx
}

/*list top字体字体*/

.list_top_size_text {
  margin-left: 28rpx;
  font-size: 28rpx;
}

.item_view {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.item_img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 10rpx;
}

.item_icon {
  width: 46rpx;
  height: 46rpx;
  margin-right: 28rpx;
  margin-top: 26rpx;
  margin-left: 27rpx;
  margin-bottom: 26rpx;
}

.border_view {
  height: 200rpx;
  background-color: rgb(246, 246, 246);
}

.foot_view {
  height: 8%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list_item_text1 {

  width: 50%;
  color: rgb(61, 209, 164);
  flex-direction: column;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  border-right: 1rpx solid rgb(229, 229, 229);
}
.select-bar{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
}

.button-cancel{
  color: rgb(26, 26, 26);
}
.button-disabled{
  color: #f5f5f5;
}

button{
  background-color:#ffffff;
}

button::after{
  content:'';
  border:0px solid rgba(229, 229, 229, 0);
}