<!--引用模板-->
<template name="item">
    <view class="body" wx:for="{{messages}}" wx:key="key" wx:for-item="message">
        <view class="item_t1">
            <text>申请加入俱乐部</text>
            <text>{{message.formatTime}}</text>
        </view>
        <view style="display:flex;align-items:center;margin-top:31rpx;">
            <image src="{{message.user.avatar}}" class="item_i1"></image>
            <text class="item_t2">{{message.user.nick}}</text>
        </view>
        <text class="item_t3">{{message.joinInfo}}</text>
        <view class="body_foot">
            <text class="ok" style="color:rgb(61,209,164)" bindtap="bindApprove" data-info="{{message}}">通过</text>
            <text style="color:rgb(229,229,229)">|</text>
            <text class="refu" style="color:rgb(255,128,86)" bindtap="bindRefuse" data-info="{{message}}">拒绝</text>
        </view>
    </view>
</template>
<!--引用模板-->
<scroll-view style="height:100vh" scroll-y="true">
    <template is="item" data="{{messages}}" />
</scroll-view>
