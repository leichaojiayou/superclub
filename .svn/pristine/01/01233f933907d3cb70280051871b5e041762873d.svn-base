<scroll-view style="height:92vh;" scroll-y="true">

  <!--搜索框-->
  <view class="search_view">
    <input type="text" maxlength="16" placeholder="{{search_text}}" placeholder-class="psection" />
  </view><!--//placeholder-style="background:url({{search_img}}) no-repeat 5rpx 5rpx;" -->

  <!--topview-->
  <view class="top_view">
    <text class="bigsize_text">{{remove_text}}</text>
    <view class="top_item_view">
      <text class="bigsize_text">{{remove}}</text>
      <image class="icon_image" src="{{icon_img}}"></image>
    </view>
  </view>

  <!--mid循环列-->
  <view class="mid_view" wx:for="{{list_group}}" style="{{index==0 ? 'border-bottom: 0':''}}">
    <view class="for_item_top_view">
      <text class="list_top_size_text">{{item.text}} ({{item.num}})</text>
    </view>
    <view class="item_view" wx:for="{{item.list}}" wx:for-index="item_index" wx:for-item="listG">
      <icon bindtap="bind_Select" data-item="{{item_index}}" data-id="{{index}}" class="item_icon" size="26" type="{{listG.check ? 'success' : 'circle'}}" />
      <view class="forlist_item_view" style="{{item_index==0 ? 'border-top: 0':''}}">
        <image src="{{listG.img}}" class="item_img"></image>
        <text class="bigsize_text" style="margin-left: 27rpx;">{{listG.name}}</text>
      </view>
    </view>
  </view>

  <!--灰条view-->
  <view class="border_view"></view>
</scroll-view>
<view>
  <view class="foot_view">
    <text class="list_item_text1" style="color: rgb(26, 26, 26);" bindtap="">{{button_text}}</text>
    <text class="list_item_text1" bindtap="">{{button_text1}}</text>
  </view>
</view>