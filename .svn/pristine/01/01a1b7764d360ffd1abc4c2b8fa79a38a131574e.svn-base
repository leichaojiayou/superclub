<scroll-view scroll-y="true" style="height:100vh;" bindscrolltolower="lower">
    <!-- topview -->
    <view class="topview" bindtap="toClubInformation">
        <view class="left_img_view">
            <image src="{{club.logo}}" class="club_img"></image>
            <image src="../../../assets/images/stars.png" class="stars_img"></image>
        </view>
        <view class="right_view">
            <text>{{club.title}}</text>
            <view class="right_view_1">
                <view class="right_view_1_1">
                    <view class="top_view1">
                        <block wx:for="{{club.features}}" wx:key='{{index}}'>
                            <text wx:if="{{index == 0}}" class="icon_text" style="background-color:rgb(145, 213, 192)">{{item.name}}</text>
                            <text wx:elif="{{index == 1}}" class="icon_text" style="background-color:rgb(172, 198, 237)">{{item.name}}</text>
                            <text wx:else class="icon_text" style="background-color:rgb(227, 192, 163)">{{item.name}}</text>
                        </block>
                    </view>
                    <view class="top_view2">
                        <text>ID : {{club.clubNo}} {{club.city.province}} {{club.city.cityName}}</text>
                        <text class="bigsize1">{{club.slogan}}</text>
                    </view>
                </view>
                <view class="right_view_1_2">
                    <image class="right_img" src="../../../assets/images/right-errow.png"></image>
                    <image class="right_img1" src="../../../assets/images/qrcode.png"></image>
                </view>
            </view>
        </view>
    </view>
    <!-- midview -->
    <view class="midview" style="{{staut==1 ? 'height: 914rpx;':''}}">
        <view class="midview_top_1">
            <view class="midview_top_1_1" bindtap="nato_member_club_page">
                <image mode="aspectFill" class="midview_img" src="../../../assets/images/member@2x.png"></image>
                <text class="midview_text">会员{{club.memberCount}}</text>
            </view>
            <view class="midview_top_1_1">
                <image class="midview_img" src="../../../assets/images/active.png"></image>
                <text class="midview_text">活动{{club.activityCount}}</text>
            </view>
        </view>
        <view class="border_1">
            <view class="border_1_1"></view>
            <text>俱乐部活动</text>
            <view class="border_1_1"></view>
        </view>
        <view wx:for="{{activity}}"  wx:key='{{index}}' class="midview_list">
            <!-- 每条---报名中 -->
            <view class="midview_item_1" catchtap="actDetail" data-actid="{{item.activityID}}">
                <view class="midview_item_img_view">
                    <text class=" midview_item_1_text1" wx:if="{{item.flag}}">报名中</text>
                    <text class=" midview_item_1_text2"wx:else>已结束</text>
                    <image mode="aspectFit" class=" midview_item_1_img" src="{{item.cover}}"></image>
                </view>
                <view class="midview_item_2">
                    <text class="bigsize">{{item.title}}</text>
                    <text class="smalltext">时间 {{item.begin}}</text>
                    <view class="midview_item_2_1">
                        <text class="smalltext">报名 {{item.applyCount}}</text>
                        <text class="pricetext">￥{{item.cost}}</text>
                    </view>
                </view>
            </view>
        </view>
        <view wx:if="{{activity}}" class="theend_text_view">
            <text class="theend_text">THE END</text>
        </view>
        <view wx:else class="noimg_view">
            <image src="../../../assets/images/active.png" class="noimg"></image>
            <text >暂无活动</text>
        </view>
    </view>
    <view wx:if="{{club.roleType != 0|| club.roleType != 1 }}" style="margin-top: 78rpx;margin-bottom: 47rpx;">
        <button class="button">管理俱乐部</button>
    </view>
    <view style="margin-top: 66rpx" wx:if="{{club.roleType == 0 }}">
        <button class="button">加入俱乐部</button>
    </view>
</scroll-view>