
<!--搜索框-->
<view class="search_view">
  <input type="text" maxlength="16" placeholder="{{search_text}}" placeholder-class="psection" />
</view>

<!--topviews-->
<view class="top_view">
  <view class="top_item_view">
    <text class="mid_text">共{{people}}人报名</text>
    <view class="top_item_foot_view">
      <button class="button" bindtap="nato_group_cost_page">按费用查看</button>
    </view>
  </view>
  <view class="top_item_view" style="border-bottom: 1rpx solid rgb(230, 230, 230);" bindtap="nato_grouping_detail_page">
    <text class="big_text">分组ONE</text>
    <view class="top_item_foot_view">
      <text class="small_text" style="margin-right: 25rpx;">234人</text>
      <image class="icon_image" src="{{icon_img}}"></image>
    </view>
  </view>
  <view class="top_item_view" bindtap="nato_grouping_detail_page">
    <text class="big_text">分组TWO</text>
    <view class="top_item_foot_view">
      <text class="small_text" style="margin-right: 25rpx;">234人</text>
      <image class="icon_image" src="{{icon_img}}"></image>
    </view>
  </view>
</view>
<block wx:for="{{list}}">
  <view class="mid_item_view">
    <view bindtap="bindgroup_button" data-id="{{index}}" class="mid_item_mid_view">
    <view class="icon_view">
      <view class="{{item.group_Status ? 'css_icon_true':'css_icon_false'}}" style="{{item.group_Status ? 'margin-left:30rpx':'margin-left:35rpx'}}"></view>
      </view>
      <view class="text_groud_view">
        <text class="mid_text" style="margin-left:22rpx;">{{item.text}}</text>
        <text class="small_text" style="margin-left:9rpx;">{{item.people_num}}人</text>
      </view>
    </view>
    <view class="top_item_foot_view">
      <button wx:if="{{item.button_text!=null && item.button_text!=''}}" class="button">{{item.button_text}}</button>
    </view>
  </view>

  <!--未点击的列-->
  <block wx:if="{{item.group_Status}}" wx:for-index="idx" wx:for="{{item.group_list}}" wx:for-item="obj">
    <view wx:if="{{!obj.check_Status}}" bindtap="bind_Select" data-item="{{idx}}" data-id="{{index}}" class="list_view1">
      <view class="image_view">
        <image class="user_image" src="{{obj.img}}"></image>
      </view>
      <view class="user_info_top">
        <view class="user_info_name_top">
          <text style="font-size: 32rpx;">{{obj.user_name}}</text>
          <text class="small_text" wx:if="{{obj.club_neme!=null || obj.club_neme!=''}}">{{obj.club_neme}}</text>
        </view>
        <text style="font-size: 26rpx;margin-top: 11rpx;">{{obj.ticket}}￥{{obj.price}}</text>
      </view>
    </view>

    <!--点击后的列-->
    <view wx:if="{{obj.check_Status}}" class="list_view2">
      <view bindtap="bind_Select" data-item="{{idx}}" data-id="{{index}}" class="list_view2_top">
        <view class="image_view">
          <image class="user_image2" src="{{obj.img}}"></image>
        </view>
        <view class="user_info_top2">
          <view class="user_info_name_top">
            <text style="font-size: 32rpx;">{{obj.user_name}}</text>
            <text class="small_text" wx:if="{{obj.club_neme!=null || obj.club_neme!=''}}">{{obj.club_neme}}</text>
          </view>
          <text style="font-size: 26rpx;margin-top: 11rpx;">{{obj.ticket}}￥{{obj.price}}</text>
          <text class="small_text" style="margin-top: 11rpx;">{{obj.payment}}</text>
          <text class="small_text" style="font-size: 26rpx;margin-top: 37rpx;">{{obj.user_real_name}}</text>
          <text class="small_text" style="font-size: 26rpx;margin-top: 20rpx;">{{obj.people_id}}</text>
          <text class="small_text" style="white-space:normal;font-size: 26rpx;margin-top: 19rpx;">{{obj.content}}</text>
        </view>
      </view>
      <view class="user_foot_view">
        <text class="list_item_text" style="{{obj.button_text1=='审核' ? 'color: rgb(255, 126, 86);':''}}">{{obj.button_text1}}</text>
        <text class="list_item_text">{{obj.button_text2}}</text>
        <text class="list_item_text">{{obj.button_text3}}</text>
        <text class="list_item_text">{{obj.button_text4}}</text>
      </view>
    </view>
  </block>
</block>

<!--灰条view-->
<view class="border_view"></view>
<view>
  <view class="foot_view">
    <text class="list_item_text1">群发短信</text>
    <text class="list_item_text1">添加报名</text>
    <text class="list_item_text1">导出表格</text>
  </view>
</view>