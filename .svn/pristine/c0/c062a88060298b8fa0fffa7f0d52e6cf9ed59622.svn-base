/*拍照上传弹窗*/
.check-succeed {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
  opacity: 0;
  transition: opacity 400ms ease-in;
  pointer-events: none;
  display: flex;
  justify-content: center;
  align-items: center;
}
.check-succeed-toast{
position: relative;
  width: 84%;
  background-color: #fff;
  border-radius: 6px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.check-succeed-title{
    text-align: center;
    font-size: 40rpx;
    margin: 20rpx 0 16rpx;
    font-weight: bold;
}
.check-succeed-content{
    text-align: center;
     margin-bottom: 20rpx;
}
.check-succeed-img{
    margin: 0 auto 20rpx;
    width: 70%;
    border: 4rpx solid #f0f0f0;
}

.check-succeed-btn{
    display: inline-block;
    width: 50%;
    padding: 30rpx 0;
    text-align: center;
    color: #3dd1a5;
}
.check-succeed-line{
    position: absolute;
    left: 50%;
    bottom: 20%;
    width: 1px;
    height: 50%;
    background: #e5e5e5
}
.check-succeed-icon{
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    width: 30rpx;
}