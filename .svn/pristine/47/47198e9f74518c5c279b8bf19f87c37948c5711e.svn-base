<import src="../../../template/mine/mine.wxml" />
<import src="../../../template/toasts/toasts.wxml" />

<!--报名成功弹窗-->
<template is="apply" data="{{dialogInfo}}" />
<!--头部-->
<scroll-view scroll-y="true" style="height:100vh;" bindscrolltolower="loadMore" bindscrolltoupper="refresh">

  <!--
  <view wx:if="{{hasRefresh}}" style="text-align:center;font-size:12px;color:rgb(229,229,229);margin-bottom:30px;margin-top:30px;">
    <text>下拉刷新</text>
  </view>
  -->
  <view class="head" bindtap="nato_myaccount">

    <!--头像-->
    <image class="head_img" mode="aspectFill" style="width:132rpx;height:132rpx;" src="{{userAvater}}"></image>
    <view class="head_txt">

      <!--名称-->
      <text class="head_name" style="margin-bottom:15px;">{{userName}}</text>
      <text class="des_txt" style="margin-bottom:5px;">会员号：{{userNum}}</text>
      <block wx:if="{{bindPhone !='' && bindPhone != null}}">
        <text class="des_txt">已绑定手机：{{bindPhone}}</text>
      </block>
      <block wx:else>
        <text class="des_txt none-phone">绑定手机</text>
      </block>
    </view>

    <!--右箭头-->
    <image src="https://cdn.51julebu.com/xiaochengxu/image/black-errow@2x.png" class="right-arrow-absolute" mode="aspectFill"></image>
  </view>

  <!--我的钱包 xx俱乐部会长-->
  <view class="container" style="background:#fff;">

    <!--我的钱包-->
    <view class="con_row" bindtap="nato_myWallet">
      <view class="center">
        <image src="https://cdn.51julebu.com/xiaochengxu/image/wallet.png" class="con_img"></image>
        <text class="head_name">我的钱包</text>
      </view>
      <view class="text_icon_view">
        <text wx:if="{{unreadReceiptCount>0 && unreadReceiptCount<100}}" class="text_icon">{{unreadReceiptCount}}</text>
        <text wx:elif="{{unreadReceiptCount>99}}" class="text_icon">99+</text>
        <image src="https://cdn.51julebu.com/xiaochengxu/image/black-errow@2x.png" class="right-arrow" mode="aspectFill"></image>
      </view>
    </view>
  </view>

  <!--无报名记录-->
  <view wx:if="{{applyActCount==0}}">
    <view class="imgitem">
      <image src="https://cdn.51julebu.com/xiaochengxu/image/norecord@2x.png" class="empty_img"></image>
    </view>
    <view class="txtitem">
      <text class="t28rpx">暂无报名记录</text>
    </view>
  </view>

  <!--报名记录-->
  <view wx:else class="container">
    <view class="container_title con_title" style="background:#fff;padding-bottom:0">
      <text>报名记录</text>
      <text class="con_total des_txt">共报名{{applyActCount}}场活动</text>
    </view>
    <view wx:for="{{dataList}}" wx:key="{{index}}" style="background:#fff;margin-bottom:24rpx;padding:30rpx 0 20rpx;">
      <template is="apply_act_item" data="{{item}}" />
    </view>
    <view wx:if="{{more == 1}}" style="text-align:center;font-size:12px;color:rgb(229,229,229);padding-bottom:30px;background:#fff;margin-top:-12px;">
      <text>加载更多...</text>
    </view>
    <view wx:else style="text-align:center;font-size:12px;color:rgb(229,229,229);padding-bottom:30px;background:#fff;margin-top:-12px;">
      <text>THE END</text>
    </view>
  </view>
</scroll-view>