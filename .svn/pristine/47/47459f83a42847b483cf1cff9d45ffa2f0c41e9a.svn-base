<view  class="body">




<block wx:for="{{applyFields}}" wx:for-index="indexX">

    <block wx:if="{{item.fieldType==1 && item.fieldName!='昵称'&& item.fieldName!='手机' && item.fieldName!='身份证'&& item.fieldName!='真实姓名' && item.fieldName!='支付方式'}}">

        <view  class="help-apply">
            <view class="help-apply-title">{{item.fieldName}}</view>
            <input bindinput="didInputChanged" id="{{indexX}}"  placeholder="{{item.defaultValue}}" placeholder-class="help-apply-placeholder"/>
        </view>

    </block>

    <block wx:elif="{{item.fieldType == 1}}">
        <view class="body_1">
            <text class="body_txt">{{item.fieldName}}</text>
             <view style="text-align:right;margin-right:29rpx;">
                  <input disabled="{{item.payMethod}}" bindinput="didInputChanged" id="{{indexX}}"  placeholder="{{item.defaultValue}}" placeholder-style="placeholder"/>
            </view>
        </view>
    </block>

    <block wx:else>
        <view class="body_1">
            <text class="body_txt">{{item.fieldName}}</text>
             <view style="text-align:right;margin-right:29rpx;">
                 <picker class="{{item.fieldName == '费用选择'?'pick_text':''}}"  bindchange="didPickerChanged" id="{{indexX}}" range="{{item.ranges}}" value="{{index}}">
      {{item.currentValue}} 
                  </picker>
            </view>
        </view>
    </block>

</block>







<view class="body_1" wx:if="{{howToPay > 1}}">
    <text class="body_txt">支付状态</text>

    <block wx:if="{{adminUserName == ''}}">
      <view style="text-align:right;margin-right:29rpx;">
        <view >
          <text class="body_txt">未付款</text>
        </view>
        <view bindtap="setPayYes">
          <text class="body_txt1">设为已付款</text>
        </view>
       </view>
    </block>
    <block wx:else>
        <view style="text-align:right;margin-right:29rpx;">
        <view >
          <text class="body_txt">已付款</text>
        </view>
        <view bindtap="setPayYes">
          <text class="body_txt">({{adminUserName}}设置)</text>
        </view>
       </view>
    </block>

    
  
</view>




</view>


<!--保存按钮-->
<view style="margin:59rpx 30rpx 0 30rpx;">
<button bindtap="tapSaveButton" type="primary" hover-class="hover-btn" style="background:#3dd1a5;">保存</button>
</view>

