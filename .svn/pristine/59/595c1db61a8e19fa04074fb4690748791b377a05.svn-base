
<!--未点击的列-->
<scroll-view style="height:90vh;" scroll-y="true">
  <block wx:for-index="idx" wx:for="{{group_list}}" wx:for-item="obj">
    <view wx:if="{{!obj.check_Status}}" bindtap="bind_Select" data-item="{{idx}}" class="list_view1">
      <view class="image_view">
        <image class="user_image" src="{{obj.img}}"></image>
      </view>
      <view class="user_info_top">
        <view class="user_info_name_top">
          <text style="font-size: 32rpx;">{{obj.user_name}}</text>
          <text class="small_text" wx:if="{{obj.club_neme!=null || obj.club_neme!=''}}">{{obj.club_neme}}</text>
        </view>
        <text style="font-size: 26rpx;margin-top: 11rpx;">{{obj.ticket}}￥{{obj.price}}</text>
      </view>
    </view>

    <!--点击后的列-->
    <view wx:if="{{obj.check_Status}}" class="list_view2">
      <view bindtap="bind_Select" data-item="{{idx}}" class="list_view2_top">
        <view class="image_view">
          <image class="user_image2" src="{{obj.img}}"></image>
        </view>
        <view class="user_info_top2">
          <view class="user_info_name_top">
            <text style="font-size: 32rpx;">{{obj.user_name}}</text>
            <text class="small_text" wx:if="{{obj.club_neme!=null || obj.club_neme!=''}}">{{obj.club_neme}}</text>
          </view>
          <text style="font-size: 26rpx;margin-top: 11rpx;">{{obj.ticket}}￥{{obj.price}}</text>
          <text class="small_text" style="margin-top: 11rpx;">{{obj.payment}}</text>
          <text class="small_text" style="font-size: 26rpx;margin-top: 37rpx;">{{obj.user_real_name}}</text>
          <text class="small_text" style="font-size: 26rpx;margin-top: 20rpx;">{{obj.people_id}}</text>
          <text class="small_text" style="white-space:normal;font-size: 26rpx;margin-top: 19rpx;">{{obj.content}}</text>
        </view>
      </view>
      <view class="user_foot_view">
        <text class="list_item_text" style="{{obj.button_text1=='审核' ? 'color: rgb(255, 126, 86);':''}}" bindtap="nato_batch_group_page">{{obj.button_text1}}</text>
        <text class="list_item_text" bindtap="nato_edit">{{obj.button_text2}}</text>
        <text class="list_item_text">{{obj.button_text3}}</text>
        <text class="list_item_text">{{obj.button_text4}}</text>
      </view>
    </view>
  </block>
  <view style="height:150rpx;"></view>
</scroll-view>

<view>
  <button class="btn" bindtap="nato_sort_one">编辑分组</button>
</view>