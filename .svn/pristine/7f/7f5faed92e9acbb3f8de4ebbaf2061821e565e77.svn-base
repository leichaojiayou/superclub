<import src="../../../template/manage/clubManager.wxml" />
<import src="../../../template/common/common.wxml" />
<import src="../../../template/toasts/toasts.wxml" />
<view>
  <scroll-view style="height:100vh" scroll-y="true" bindscrolltolower="loadActs">

    <!--head-->
    <view class="back_head">
      <view class="back_top">
        <view class="manage-club-content">
          <image src="{{club.logo != null ? club.logo : 'https://cdn.51julebu.com/xiaochengxu/image/club.png'}}" class="head_img manage-club-logo" mode="aspectFit"></image>
          <view class="white_txt">
            <text>{{club.title}}</text>
            <text class="manage-club-text">ID:123456</text>
          </view>
        </view>
        <view style="display:flex;align-items:center">
          <view style="color:#fff;font-size:34rpx;">设置</view>
          <image class="manage-club-errow" src="https://cdn.51julebu.com/xiaochengxu/image/right-errow@2x.png" mode="aspectFit"></image>
        </view>
      </view>
      <view class="back_foot">
        <block wx:for="{{threelabel}}" wx:key="key">
          <template is="clubmsg" data="{{item}}" />
        </block>
        <label class="xiegan label_txt">/</label>
        <label class="xiegan2 label_txt">/</label>
      </view>
    </view>
    <view class="back_foot">
      <block wx:for="{{item}}" wx:key="key">
        <view bindtap="nato" id="{{index}}" class="body_item1">
          <image src="{{item.img}}" class="list_img" style="margin-bottom:10px;"></image>
          <text class="des_txt2">{{item.content}}</text>
          <view class="point" wx:if="{{index == 3 & club.joinUnCheckNum != 0}}">
            <text>{{club.joinUnCheckNum}}</text>
          </view>
        </view>
      </block>
    </view>
    <view class="tran des_txt" style="margin-bottom:20px">
      <view class="line" style="left:50px;"></view>
      <view class="line" style="right: 50px;"></view>
      管理活动
    </view>

    <!--<template is="common_two" data="{{item3}}" style="border-bottom:1px solid white" />-->
    <view>
      <template is="item_act" data="{{acts}}" style="border-bottom:1px solid white" />
    </view>
    <view style="text-align:center;font-size:12px;color:rgb(229,229,229);margin-bottom:30px;">
      <text>THE END</text>
    </view>
    <template name="clubmsg">
      <view class="club_msg">
        <text class="label_txt" style="font-size:12px;">{{item.txt}}</text>
        <text class="label_txt">{{item.amount}}</text>
      </view>
    </template>
  </scroll-view>

  <!--招募会员二维码-->
  <view class="code-succeed" style="{{codeHehe}}">
    <view class="code-succeed-toast" style="background:url(https://cdn.51julebu.com/xiaochengxu/image/ewmbj@2x.png) no-repeat center center">
      <view class="code-message">
        <image mode="widthFix" class="code-message-logo" src="{{club.logo}}"></image>
        <image mode="widthFix" class="code-message-icon" src="{{clubicon}}"></image>
      </view>
      <view class="code-content-title">{{club.title}}</view>
      <view class="code-content-text">{{club.desc}}</view>
      <image mode="widthFix" class="code-message-img" src="{{club.qrcode}}"></image>
      <button bindtap='saveQrCode' class="code-content-btn">保存二维码</button>
    </view>
  </view>
  <view class="code-text" style="{{codeHehe}}">
    <image mode="widthFix" class="code-close" src="https://cdn.51julebu.com/xiaochengxu/image/ewm-close@2x.png" bindtap="closeCode"></image>
  </view>
</view>