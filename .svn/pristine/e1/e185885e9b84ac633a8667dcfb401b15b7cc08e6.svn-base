<scroll class="scroll" scroll-y="true" style="padding-bottom:116rpx;">
  <view wx:for="{{applyList}}">
    <template is="helplist" data="{{item}}" />
  </view>
  <block wx:if="{{type==1}}">
    <view class="batten">
      <button class="botbtn" bindtap="apply">马上报名</button>
    </view>
    <view class="batten">
      <button bindtap="nato_apply_page">帮人报名</button>
    </view>
  </block>
</scroll>
<template name="helplist">
  <view class="container" style="position:relative ">
    <view class="batten" style="padding-top:17px;">
      <text class="txtmargin">昵称</text>
      <text>{{item.userName}}</text>
    </view>
    <view class="batten">
      <text class="txtmargin">手机</text>
      <text>{{item.mobile}}</text>
    </view>
    <view class="batten" wx:if="{{item.cost>0}}">
      <text class="txtmargin">费用</text>
      <text>{{item.feiyong}}</text>
    </view>
    <view class="batten">
      <text class="txtmargin">性别</text>
      <text>{{item.gender}}</text>
    </view>
    <view wx:for="{{item.extraDatas}}" wx:for-index="idx" wx:for-item="data">
      <view class="batten">
        <text class="txtmargin">{{data.name}}</text>
        <text>{{data.value}}</text>
      </view>
    </view>
    <view class="btn des_txt">
      <text class="txtmargin" bindtap="editApply" data-item="{{item}}">编辑</text>
      <text bindtap="deleteApply" data-item="{{item}}">删除</text>
    </view>
  </view>
</template>