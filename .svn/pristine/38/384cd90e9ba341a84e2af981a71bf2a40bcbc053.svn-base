.bindphone {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 34.5px;
}

.bindphone1 {
  width: 92%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
}

.bindphone2 {
  margin-top: 14px;
  font-size: 13px;
}
.inputview {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 19px;
  border-top: 1px solid rgb(229, 229, 229);
  border-bottom: 1px solid rgb(229, 229, 229);
  height: 44px;
  background-color: rgb(255, 255, 255);
  width: 100%;
}

.bindphone input {
  padding-left: 30px;
  font-size: 17px;
  color: rgb(26, 26, 26);
}

.inputlabel {
font-size: 17px;
  padding-right: 15px;
  color: rgb(255, 126, 86);
}

.psection {
  padding-left: 0;
  color: rgb(191, 191, 191);
}

.bindphone button {
  width: 100%;
  font-size: 18px;
  background-color: rgb(61, 209, 164);
  margin-top: 30px;
}

.buttonStatu1 {
  color: rgb(255, 255, 255);
}

.buttonStatu2 {
  
  color: rgba(255, 255, 255, 0.4);
}

.bottext1 {
  color: rgb(142, 142, 142);
}

.bottext2 {
  color: rgb(61, 209, 164);
}
