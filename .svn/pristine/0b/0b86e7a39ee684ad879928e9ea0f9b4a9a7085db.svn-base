/* pages/helpenlist/helpenlist.wxss */
@import "/template/toasts/toasts.wxss";

.container {
  margin-top: 30rpx;
  margin-bottom: 18rpx;
}

.batten {
  padding: 0 30rpx 16px 30rpx;
  white-space: normal;
}

.btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  height: 88rpx;
  margin: 0 30rpx;
  border-top: 1rpx solid #e6e6e6;
}

.btn-line {
  position: absolute;
  top: 29rpx;
  left: 50%;
  width: 2rpx;
  height: 30rpx;
  background: rgb(229, 229, 229)
}

.btn-item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  font-size: 28rpx;
  color: rgb(90, 90, 90);
}
.apply-status{
  position: absolute;
  top: 38rpx;
  right: 30rpx;
  font-size: 24rpx;
  color: rgb(141, 141, 141);
}
.btn-icon {
  width: 24rpx;
  height: 22rpx;
  margin-right: 10rpx;
}

.txtmargin {
  margin-right: 25px;
}

.scroll {
  height: 100vh;
  background-color: white;
}

.payText {
  font-size: 24rpx;
  color: rgb(141, 141, 141);
}
.help-apply-box{
  display: flex;
  justify-content: center;
  align-items:center;
  border-top:1rpx solid #e6e6e6; 
  border-bottom:1rpx solid #e6e6e6;   
  width: 100%;
  height: 88rpx;
  background: #fff;
  color: #3dd1a5;
  font-size: 36rpx;
  border-radius: 0;
  margin-bottom: 38rpx;
}
.apply-agree{
  display: flex;
  justify-content: center;
  font-size: 26rpx;
  color:#262626;
  margin-bottom: 61rpx;
}
.apply-aggree-img{
  width: 24rpx;
  height: 24rpx;
  margin-right: 9rpx;
}
.feiyong{
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
}