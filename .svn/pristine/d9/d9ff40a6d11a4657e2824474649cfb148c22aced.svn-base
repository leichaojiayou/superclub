<scroll-view style="height:92vh;margin-top:30rpx;padding-bottom:100rpx;" scroll-y="true">
  <!-- mid循环列 -->
  <view class="item_view" wx:for="{{members}}" wx:key="index">
    <view class="forlist_item_view" catchtap="selectMember" data-userid="{{item.userID}}">
        <icon class="item_icon" size="26" wx:if="{{item.roleTpye==1&&type==0}}" type="success"  />
        <icon class="item_icon" size="26" wx:elif="{{item.roleTpye==3&&type==1}}" type="success"  />
        <icon class="item_icon" size="26" wx:else type="circle"  />
      <image src="{{item.avatar}}" class="item_img"></image>
      <text class="bigsize_text" style="margin-left: 27rpx;">{{item.nick}}</text>
      </view>
    </view>
      <!-- 灰条view -->
    </scroll-view>
    <view class="select-bar">
      <view class="foot_view">
        <text class="list_item_text1" style="color: rgb(26, 26, 26);" bindtap="cancel">取消</text>
        <text class="list_item_text1" wx:if="{{!remove}}" bindtap="appoint" data-result="{{type}}">确定</text>
        <text class="list_item_text1" wx:else bindtap="removeMamger" >确定</text>
      </view>
    </view>