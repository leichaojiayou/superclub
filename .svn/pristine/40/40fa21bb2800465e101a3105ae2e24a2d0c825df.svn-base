<import src="../../../template/common/common.wxml" />
<scroll-view scroll-y="true" style="height:100vh">
  <view style="text-align:center;padding:15px 0 10px 0">
    <view class="des_txt">根据俱乐部等级可获得不同的免费的短信使用额度</view>
    <text class="green_txt4">使用规则</text>
  </view>
  <view>
    <view wx:for="{{acts}}" wx:key='index' class="midview_list">

      <!-- 每条-报名中 -->
      <view class="midview_item_1" catchtap="selectAct" data-id="{{item.activityID}}">
        <view class="midview_item_img_view">
          <text class=" midview_item_1_text1" wx:if="{{item.timeFlag}}">报名中</text>
          <text class=" midview_item_1_text2" wx:else>已结束</text>
          <image mode="aspectFill" class=" midview_item_1_img" src="{{item.cover}}"></image>
        </view>
        <view class="midview_item_2">
          <view style="height:96rpx; margin-top:-4rpx">
            <text class="bigsize">{{item.title}}</text>
          </view>
          <text class="smalltext" style="padding-bottom:4rpx">时间 {{item.time}}</text>
          <view class="midview_item_2_1">
            <text class="smalltext">报名{{item.applyCount}}</text>

            <!--短信-->
            <text wx:if="{{item.freeSmsCount == ''}}" class="gray_txt nofreemsg freem">暂无免费短信</text>
            <text wx:elif="{{item.freeSmsCount == ''}}" style="display:none"></text>
            <view wx:elif="{{item.freeSmsCount != ''}} " class="gray_txt havefreemsg freemsg" style="background:#95ffdf">可免费短信<text class="green_txt2">{{item.freeSmsCount}}</text>条</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</scroll-view>