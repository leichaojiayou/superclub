<import src="../../../template/toasts/toasts.wxml"/>
<!--报名页面-->

<template is="apply" data="{{dialogInfo}}"/>

<!--头框-->
<view class="bigview" wx:if="{{isCost}}">

  <!--票价-->
  <view class="itemView" >
    <text>费用</text>
    <view class="itemView_foot">
      <picker bindchange="ticketSelect" value="{{ticketSelectIndex}}" range="{{tickets}}" range-key="desc">
        <view class="foot_text_view">
          <text class="bigsize" style="margin-bottom: 5px;">¥{{selectTicket.cost/100}}</text>
          <text class="smartsize">{{selectTicket.name}}</text>
        </view>
      </picker>
      <image src="{{rightArrow}}"></image>
    </view>
  </view>
</view>

<!--中框-->
<view class="bigview">
  <view wx:for="{{fields}}" wx:key="item">
    <view class="itemView">
      <text>{{item.fieldName}}</text>
      <view wx:if="{{item.fieldType==2}}" class="itemView_foot">
        <picker bindchange="pickerEvent" range="{{item.option}}" data-item="{{item}}" data-index="{{index}}">
          <view class="foot_text_view">
            <text class="bigsize"> {{item.defaultValue}} </text>
          </view>
        </picker>
        <image src="https://cdn.51julebu.com/xiaochengxu/image/right-errow.png"></image>
      </view>
      <view wx:else class="itemView_foot">
        <input bindinput="inputEvent" data-item="{{item}}" data-index="index" type="{{item.inputType}}" maxlength="16" placeholder="{{item.defaultValue}}" placeholder-class="psection" />
      </view>
    </view>
  </view>
</view>

<!--按钮框-->
<view class="buttonview">
  <button bindtap="apply" class="button1">马上报名</button>
  <button bindtap="helpApply" class="button2">帮人报名</button>
</view>