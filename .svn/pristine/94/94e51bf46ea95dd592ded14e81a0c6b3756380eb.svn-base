<import src="../../../template/toasts/toasts.wxml" />
<!--报名页面-->
<form bindsubmit="greenButton" report-submit="true">
<!--头框-->
<view class="bigview" wx:if="{{tickets&&tickets.length>0}}">

  <!--票价-->
  <view class="itemView" style="border-bottom:none" bindtap="setModalStatus" data-status="1">
    <text style="width:100px">费用</text>
    <view class="itemView_foot">
        <view class="foot_text_view">
          <text class="bigsize" style="margin-bottom: 5px;">¥{{selectTicket.cost/100}}</text>
          <text class="smartsize">{{selectTicket.name}}</text>
        </view>
      <image style="width:18rpx;height:31rpx" src="https://cdn.51julebu.com/xiaochengxu/image/black-errow@2x.png"></image>
    </view>
  </view>
</view>

  <!--中框-->
  <view class="bigview">
    <view wx:for="{{fields}}" wx:key="item">
      <!--自定义-->
      <view wx:if="{{item.fieldType!=2&&item.fieldName!='昵称'&&item.fieldName!='手机'&&item.fieldName!='身份证'&&item.fieldName!='真实姓名'}}" class="help-apply">
        <view class="help-apply-title">{{item.fieldName}}</view>
        <input bindinput="inputEvent" data-item="{{item}}" data-index="{{index}}" type="{{item.inputType}}" maxlength="{{item.maxText}}" value="{{item.defaultValue}}" placeholder="{{item.placeHolder}}" placeholder-class="help-apply-placeholder"/>
      </view>
      <view wx:else class="itemView">
        <text style="width:100px">{{item.fieldName}}</text>
        <view wx:if="{{item.fieldType==2}}" class="itemView_foot">
          <picker bindchange="pickerEvent" value="{{item.select}}" range="{{item.option}}" data-item="{{item}}"
                  data-index="{{index}}">
            <view class="foot_text_view">
              <text class="bigsize"> {{item.select==-1?'点击选择':item.option[item.select]}}</text>
            </view>
          </picker>
          <image style="width:18rpx;height:31rpx"
                 src="https://cdn.51julebu.com/xiaochengxu/image/black-errow@2x.png"></image>
        </view>
        <view wx:else class="itemView_foot">
          <input bindinput="inputEvent" data-item="{{item}}" data-index="{{index}}" type="{{item.inputType}}" maxlength="{{item.maxText}}" value="{{item.defaultValue}}" placeholder="{{item.placeHolder}}" placeholder-class="psection"/>
        </view>
      </view>
    </view>
  </view>

<!--按钮框-->
<!--<view class="buttonview">
  <button form-type="submit" class="button1">{{needPayCost}}{{type==0||type==4?'马上报名':'保存'}}</button>
  <button wx:if="{{type==0||type==4}}" bindtap="helpApply" class="button2">帮人报名</button>
</view>-->

  <view class="buttonview">
    <view class="help-apply-box" bindtap="helpApply" wx:if="{{type==0||type==4}}">帮人报名</view>
    <view class="apply-agree" bindtap="agreeButton" wx:if="{{type==0||type==4}}">
      <image src="https://cdn.51julebu.com/xiaochengxu/image/ysygx@2x.png" class="apply-aggree-img"></image>
      我同意
      <text style="color:#3dd1a5">《超级俱乐部活动报名协议》</text>
    </view>
    <view class="batten">
      <button class="botbtn" form-type="submit">{{needPayCost}}{{type==0||type==4?'马上报名':'保存'}}</button>
    </view>
  </view>

  <!--临时用户绑定手机号码-->
<template is="sendNum" data="{{authDialog,countDown}}" />
<template is="showToast" data="{{showTipTxt: showTipTxt, tipHidden: tipHidden}}"/>

  <!--费用选择器-->
  <view class="drawer_screen" bindtap="setModalStatus" data-status="0" wx:if="{{showModalStatus}}"></view>
  <view animation="{{animationData}}" class="drawer_attr_box" wx:if="{{showModalStatus}}">
    <view class="drawer_attr_content">
      <view class="text_center">
        <view style="height:65rpx;border-bottom:1rpx solid rgb(230,230,230)"></view>

        <!--时间循环-->
        <view style="background-color: rgb(255, 255, 255);" bindtap="changehidden">
          <view class="item" wx:for="{{tickets}}" wx:for-item="ticket" wx:for-index="item_index" id="{{item_index}}">

            <view style="flex-flow:wrap" class="{{ticket.remain==0?'blur':''}}">
              <view style="font-size:28rpx">{{ticket.name}}</view>
              <view style="color:gray;font-size:24rpx;padding-top:20rpx">剩余名额 {{ticket.remain}}</view>
            </view>
            <text class="{{ticket.remain==0?'blur':''}}" style="position: absolute;right:120rpx;color:#20bb21;top:30rpx">¥{{ticket.cost/100}}</text>

            <!--if判断-->
            <view wx:if="{{ticket.isDefault==1}}">
              <icon type="success_no_circle" size="18"></icon>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</form>