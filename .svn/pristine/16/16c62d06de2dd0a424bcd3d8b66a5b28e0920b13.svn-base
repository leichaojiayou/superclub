<view  class="body">
<view class="body_1" wx:key="1" wx:for="{{applyFields}}" wx:for-index="indexX">
<text class="body_txt">{{item.fieldName}}</text>

<view wx:if="{{item.fieldType == 1}}" style="text-align:right;margin-right:29rpx;">
<input disabled="{{item.payMethod}}" bindinput="didInputChanged" id="{{indexX}}"  placeholder="{{item.defaultValue}}" placeholder-style="placeholder"/>
</view>

<view wx:else style="text-align:right;margin-right:29rpx;">
<picker  bindchange="didPickerChanged" id="{{indexX}}" range="{{item.ranges}}" value="{{index}}">
{{item.currentValue}} 
</picker>
</view>

</view>

<!--保存按钮-->
<view style="margin:59rpx 30rpx 0 30rpx;">
<button bindtap="tapSaveButton" type="primary">保存</button>
</view>

</view>


<view style="height:330rpx;background-color:rgb(246,246,246)"></view>