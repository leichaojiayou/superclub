<view class="contianer">
  <view class="button">
    <button bindtap="actDetail" size="default">请求活动详情</button>
    <button bindtap="commentList" size="default">请求评论列表</button>
    <button bindtap="applyList" size="default">请求报名列表</button>
    <button bindtap="createComment" size="default">创建评论</button>
    <button bindtap="likeAction" size="default">点赞</button>
    <button bindtap="unlikeAction" size="default">取消点赞</button>
    <button bindtap="likeList" size="default">请求点赞列表</button>
    <button bindtap="apply" size="default">自己报名</button>
  </view>
  <form class="commentBox" catchsubmit="getInput" style="{{showInput}}">
    <input placeholder="在此输入评论内容" focus="{{inputFocus}}" bindinput="inputEvent" name="commentInput" />
  </form>
  <view id="result">
    <text>{{text}}</text>
  </view>
</view>