/*引用报名列表模版css*/
@import "../../../template/activity/applyed.wxss";
@import "../../../template/activity/act_comment.wxss";

.header_imgss {
  width: 100%;
  height: 350rpx;
  opacity: 85%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.imgss {
  width: 348rpx;
  height: 85rpx;
}

.detail_title_lay {
  white-space: normal;
  padding: 30rpx 0 30rpx 0;
}

.detail_con, .detail_map {
  display: flex;
  flex-direction: column;
}

.detail_con {
  background-color: #fff;
  padding: 0 34rpx 0 34rpx;
}

.detail_msg, .detail_input {
  display: flex;
  flex-direction: row;
}

.detail_msg {
  justify-content: space-between;
  margin-bottom: 15px;
}

.detail_input {
  /*活动地点、活动时间等item*/
  position: relative;
  align-items: center;
  padding-bottom: 10px;
  margin-top: 10px;
}

.detail_txt {
  /*item左侧描述*/
  margin-right: 15px;
  width: 55px;
  flex-shrink: 0;
}

.detail_map {
  /*查看地图按钮*/
  position: absolute;
  right: 0px;
  align-items: center;
}

.detail_row_right {
  /*item右侧详情*/
  flex-grow: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.detail_lineh {
  position: absolute;
  bottom: 0rpx;
  width: 80%;
  border-bottom: 2rpx solid rgb(230, 230, 230);
}

.detail_linev {
  /*地图按钮与地址描述之间的丨线*/
  position: absolute;
  border-left: 2rpx solid rgb(230, 230, 230);
  height: 40rpx;
  width: 2rpx;
  top: 0;
  right: 60rpx;
}

.sort {
  /*详情 报名须知 费用循环属性*/
  display: flex;
  height: 98rpx;
  align-items: center;
  font-size: 28rpx;
  letter-spacing: -0.6rpx;
  justify-content: space-around;
  bottom: 0;
}

.sort1 {
  /*详情 报名须知 费用循环各个item属性*/
  width: 250rpx;
  padding: 8rpx;
  margin-top: 10rpx;
  border-radius: 4rpx;
  text-align: center;
}

.actDetail, .applyKnow, .cost {
  /*活动详情、报名须知、费用 页面*/
  background-color: rgb(255, 255, 255);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/*textarea里面的样式*/

.textarea1 {
  white-space: normal;
  /*height: 116.5px;*/
  width: 90%;
  overflow: scroll;
  font-size: 17px;
  line-height: 25px;
  letter-spacing: -0.4px;
  color: rgb(17, 17, 17);
}

.all_scr {
  height: 90vh;
}

.textarea_foot {
  /*已报名 ,修改报名大框*/
  display: flex;
  letter-spacing: -0.4px;
  color: rgb(142, 142, 142);
  font-size: 17px;
  position: relative;
  bottom: 0px;
  justify-content: space-between;
  border-top: 0.5px solid rgb(230, 230, 230);
  opacity: 0.95;
  align-items: center;
  height: 10vh;
  background-color: rgb(255, 255, 255);
}

.txt_textarea {
  padding-left: 5%;
}

.btn_textarea {
  position: absolute;
  right: 5%;
  margin-top: 4rpx;
}

.detailPicture {
  /*详情图片*/
  width: 690rpx;
}

.actAddress {
  /*活动地点文字*/
  padding: 0 90rpx 0 0;
}

.paddingLR {
  /*padding左右各30rpx*/
  padding: 0 30rpx 0 30rpx;
}

.act_contents {
  /*活动内容解析样式*/
}

.applyed_title,.comment_title {
  /*已报名title*/
  width: 750rpx;
  height: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: rgb(220, 245, 245);
}

.applyed,.comment_text,.comment_button {
  /*“已报名”、“评论”文字样式*/
  font-size: 34rpx;
  letter-spacing: -0.8rpx;
}

.surplus_apply {
  /*剩余名额 样式*/
  color: rgb(142, 142, 142);
  font-size: 26rpx;
  letter-spacing: -0.6rpx;
}

.deadlineTime {
  /*报名截止时间*/
  font-size: 24rpx;
  letter-spacing: -0.6rpx;
  color: rgb(142, 142, 142);
  text-align: center;
  padding: 30rpx 0 30rpx 0;
}