<template name="comment">
  <view class="comment_item">
    <view class="userinfo">

      <!--评论人信息-->
      <view>
        <image class="avatar" style="width:79rpx;height:79rpx;radius:50%" src="{{item.avatar}}"></image>
        <text class="nick">{{item.userNick}}</text>
      </view>
      <text class="post_time">{{item.postTime}}</text>
    </view>
    <text class="comment_content">{{item.actComment}}</text>
  </view>
</template>