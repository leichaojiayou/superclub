  <view style="margin-right:217rpx;">
    <text class="body_txt">票价</text>
  </view>
<view wx:if="{{showTicket}}">
  <view style="text-align:right;">
    <text class="t3">{{ticketPrice}}</text>
  </view>
  <view>
    <text class="t4" style="color:rgb(141,141,141)">{{ticketName}}</text>
