<import src="../../../template/toasts/toasts" />
<scroll-view scroll-y="true" style="height:100vh;">
  <view class="header" bindtap="clickLogo">

    <!--俱乐部logo-->
    <text class="header_txt">俱乐部Logo</text>

    <!--俱乐部图片-->
      <image src="{{logo!='' ? logo : 'https://cdn.51julebu.com/xiaochengxu/image/club.png'}}" class="header_img"></image>

    <image src="https://cdn.51julebu.com/xiaochengxu/image/black-errow@2x.png" class="right-arrow-absolute" style="top:46%" mode="aspectFill"></image>
  </view>

  <!--名称-->
  <view bindtap="clickName" style=" background-color: rgb(255, 255, 255);">
    <view class="name_item">
      <view style="margin-top: 29rpx;margin-bottom:15.5pt;">
        <text class="name_txt ">名称</text>
        <text class="name_txt1">{{title}}</text>
      </view>
      <image src="https://cdn.51julebu.com/xiaochengxu/image/black-errow@2x.png" class="right-arrow-absolute" style="top:46%" mode="aspectFill"></image>
    </view>
  </view>

  <!--所在地-->
  <view bindtap="clickLocation" style=" background-color: rgb(255, 255, 255);">
    <view class="name_item">
      <view style="margin-top: 14.5pt;margin-bottom:15.5pt;">
        <text class="name_txt ">所在地</text>
        <text class="choose_txt" style="color:{{locationColor}}">{{location != '' ? location : choose}}</text>
      </view>
      <image src="https://cdn.51julebu.com/xiaochengxu/image/black-errow@2x.png" class="right-arrow-absolute" style="top:46%" mode="aspectFill"></image>
    </view>
  </view>

  <!--成立时间, 暂时不做-->
  <view bindtap="clickSetupTime" hidden="{{true}}" style=" background-color: rgb(255, 255, 255);">
    <view class="name_item">
      <view style="margin-top: 14.5pt;margin-bottom:15.5pt;">
        <text class="name_txt ">成立时间</text>
        <text class="choose_txt">{{choose}}</text>
      </view>
      <image src="https://cdn.51julebu.com/xiaochengxu/image/black-errow@2x.png" class="right-arrow-absolute" style="top:46%" mode="aspectFill"></image>
    </view>
  </view>

  <!--主打项目-->
  <view bindtap="clickFeature" style=" background-color: rgb(255, 255, 255);">
    <view class="name_item">
      <view style="margin-top: 14.5pt;margin-bottom:15.5pt;display:flex;justify-content: space-between">
        <view class="name_txt">主打项目</view>
        <text wx:if="{{features.length==0}}" class="choose_txt">{{choose}}</text>
        <view class="create-choose">
          <block wx:for="{{features}}" wx:key="feature_key">
            <text class="choose-project">{{item.name}}</text>
          </block>
        </view>
      </view>
      <image src="https://cdn.51julebu.com/xiaochengxu/image/black-errow@2x.png" class="right-arrow-absolute" style="top:46%" mode="aspectFill"></image>
    </view>
  </view>

  <!--宣言-->
  <view bindtap="clickSlogan" style=" background-color: rgb(255, 255, 255);">
    <view class="name_item">
      <view style="margin-top: 14.5pt;margin-bottom:15.5pt;">
        <text class="name_txt ">宣言</text>
        <text class="xuanyan-jianjie" style="color:{{sloganColor}}">{{slogan != '' ? slogan:input}}</text>
      </view>
      <image src="https://cdn.51julebu.com/xiaochengxu/image/black-errow@2x.png" class="right-arrow-absolute" style="top:46%" mode="aspectFill"></image>
    </view>
  </view>

  <!--简介-->
  <view bindtap="clickDesc" style=" background-color: rgb(255, 255, 255);border-bottom: 0.5pt solid rgb(229, 229, 229);">
    <view class="name_item">
      <view style="margin-top: 14.5pt;margin-bottom:15.5pt;">
        <text class="name_txt ">简介</text>
        <text class="xuanyan-jianjie" style="color:{{descColor}}">{{desc!= '' ? desc:txt}}</text>
      </view>
      <image src="https://cdn.51julebu.com/xiaochengxu/image/black-errow@2x.png" class="right-arrow-absolute" style="top:46%" mode="aspectFill"></image>
    </view>
  </view>

  <!--负责人-->
  <view class="host">
    <text class="host_txt">负责人</text>
    <input bindinput="inputCharger" placeholder="输入" class="input_txt" />
  </view>

  <!--联系电话-->
  <view class="phonecontact">
    <view class="name_item">
      <view style="margin-top: 29rpx;margin-bottom:15.5pt;">
        <text class="name_txt ">联系电话</text>
        <input bindinput="inputPhone" placeholder="输入" class="input_txt1" type="number" />
      </view>
    </view>
  </view>
  <form bindsubmit="formSubmit" report-submit="true">
    <button type="primary" class="btn" style="background:rgb(61, 209, 164);" form-type="submit" disabled="{{logo==''||title==''||location==''||slogan==''||features.length==0||desc==''||charger==''||phone==''}}">提交审核</button>
  </form>
  <view style="height:85rpx;  background-color: rgb(246, 246, 246);"></view>

  <!--临时用户绑定手机号码-->
  <template is="sendNum" data="{{authDialog,countDown}}" />
</scroll-view>

<template is="showToast" data="{{showTipTxt: showTipTxt, tipHidden: tipHidden}}" />