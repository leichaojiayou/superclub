/*按钮*/



.zan-btn {
  height: 8vh;
  width: 100%;
  position: relative;
  color: #333;
  background-color: #fff;
  margin-bottom: 10px;
  padding-left: 15px;
  padding-right: 15px;
  border-radius: 2px;
  border: 1rpx solid #e5e5e5;
  font-size: 16px;
line-height: 8vh;
  box-sizing: border-box;
  text-decoration: none;
  text-align: center;
  vertical-align: middle;
}
.zan-btn--large {
  border-radius: 0;
  margin-bottom: 0;
  border: none;
  /*line-height: 50px;
  height: 50px;*/
}

.zan-btn--warn {
  color: #fff;
  background-color: rgb(61, 209, 164);
  border-color: #f85;
}

