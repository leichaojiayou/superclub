<template name="common_one">
  <view style="display:flex;align-items:center;justify-content:space-between;position:relative;margin-bottom:50rpx" bindtap="clubHome" data-club="{{club}}" data-type="{{club.type}}">
    <view style="display:flex;align-items:flex-start; margin-left: 30rpx;">

      <!--图片-->
      <view class="header" style="margin-left:0;">
        <image src="{{club.logo}}" class="header_img" mode="aspectFill"></image>
      </view>
      <!--中间这一框  三列-->
      <view class="club-index-detail">
        <!--俱乐部名字-->
        <view class="club-index-title">
          <text class="club_id txt-overflow">{{club.title}}</text>
        </view>
        <view style="display:flex; justify-content:space-between;align-items:center;height：42rpx;margin-bottom:19rpx;margin-top:15rpx;">
          <view class="sort" style="margin-top:0;">
            <view class="items-tap">
              <block wx:for="{{club.features}}" wx:key="key_feature" wx:for-item="feature">
                <text wx:if="{{index==0&&feature.name}}" class="kuangkuang master-project-overflow" style="background-color:rgb(145, 213, 192)">{{feature.name}}</text>
                <text wx:elif="{{index==1&&feature.name}}" class="kuangkuang master-project-overflow" style="background-color:rgb(172, 198, 237)">{{feature.name}}</text>
                <text wx:elif="{{index==2&&feature.name}}" class="kuangkuang master-project-overflow" style="background-color:rgb(227, 192, 163)">{{feature.name}}</text>
              </block>
            </view>
          </view>
        </view>
        <view class="nums" wx-if="{{club.newActCount != 0}}">{{club.newActCount}}个新活动</view>
      </view>
    </view>
    <view class="flex-end">
      <view wx-if="{{club.newActCount != 0}}" class="index-tip">{{club.newActCount}}</view>
      <image src="https://cdn.51julebu.com/xiaochengxu/image/black-errow@2x.png" class="right-arrow" mode="aspectFill"></image>
    </view>
  </view>
</template>