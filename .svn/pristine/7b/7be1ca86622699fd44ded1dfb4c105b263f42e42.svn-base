<view  class="body">



<view class="body_1"  wx:for="{{applyFields}}" wx:for-index="indexX">
    <text class="body_txt">{{item.fieldName}}</text>
    <view wx:if="{{item.fieldType == 1}}" style="text-align:right;margin-right:29rpx;">
      <input disabled="{{item.payMethod}}" bindinput="didInputChanged" id="{{indexX}}"  placeholder="{{item.defaultValue}}" placeholder-style="placeholder"/>
      </view>
      <view wx:else style="text-align:right;margin-right:29rpx;">
      <picker  bindchange="didPickerChanged" id="{{indexX}}" range="{{item.ranges}}" value="{{index}}">
      {{item.currentValue}} 
      </picker>
      </view>
</view>



<view class="body_1" wx:if="{{howToPay > 1}}">
    <text class="body_txt">支付状态</text>

    <block wx:if="{{adminUserName == ''}}">
      <view style="text-align:right;margin-right:29rpx;">
        <view >
          <text class="body_txt">未付款</text>
        </view>
        <view bindtap="setPayYes">
          <text class="body_txt1">设为已付款</text>
        </view>
       </view>
    </block>
    <block wx:else>
        <view style="text-align:right;margin-right:29rpx;">
        <view >
          <text class="body_txt">已付款</text>
        </view>
        <view bindtap="setPayYes">
          <text class="body_txt">({{adminUserName}}设置)</text>
        </view>
       </view>
    </block>

    
  
</view>


<!--保存按钮-->
<view style="margin:59rpx 30rpx 0 30rpx;">
<button bindtap="tapSaveButton" type="primary" hover-class="hover-btn" style="background:#3dd1a5;">保存</button>
</view>

</view>


<view style="height:330rpx;background-color:rgb(246,246,246)"></view>