.body {
  background: rgb(248, 248, 248);
}

.hint {
  background: #0fb;
  display: flex;
}

.icon {
  width: 70rpx;
  height: 70rpx;
}
.icon_b{
   width: 70rpx;
  height: 70rpx;
  border-radius: 50rpx;
}

.bg {
  margin-top: 20px;
  background: #fff;
}

.input_title {
  height: 100rpx;
  border-bottom: 1px;
  border-bottom-style: solid;
  border-bottom-color: rgb(248, 248, 248);
}

.input_content {
  display: flex;
  width: 100%;
  flex-flow: wrap;
}

.choose {
  height: 70rpx;
  background: #eee;
  display: flex;
  justify-content: space-around;
}

.list_item {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  justify-content: space-around;
  border-bottom: 1px;
  border-bottom-style: solid;
  border-bottom-color: rgb(248, 248, 248);
}

.picker {
  width: 80%;
  font-size: 28rpx;
  letter-spacing: -0.6rpx;
}

.choose_user {
  display: flex;
  justify-content: space-around;
  flex-flow: wrap;
}

.choose_user_item {
  width: 27%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin-top: 10px;
  border:1rpx;
  border-style: solid;
  border-color: rgb(89,215,176);
}

.content_body {
  width: 100%;
  height: 500rpx;
}

.point {
  margin-top: 17rpx;
  margin-right: 16rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50rpx;
}

.point1 {
  margin-left: 178rpx;
}

.choose_color {
  background: #eee;
  display: flex;
  width: 750rpx;
  height: 70rpx;
  position: absolute;
  bottom: 0rpx;
  text-align: center;
}

.btn {
  margin: 40rpx;
}
