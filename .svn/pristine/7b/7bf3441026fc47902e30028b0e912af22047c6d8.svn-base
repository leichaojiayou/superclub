
<!--模版-->
<template name="comment">
  <view bindtap="commentTap" class="userInfo" data-item="{{item}}">
    <view>
      <image src="{{item.avatar}}" class="avatar" mode="aspectFit"></image>
    </view>
    <view class="nickTime">
      <text class="nick">{{item.nick}}</text>
      <text class="postTime" style="color:rgb(191,191,191)">{{item.postTime}}</text>
    </view>
  </view>
  <view class="actComment">{{item.actComment}}</view>
</template>