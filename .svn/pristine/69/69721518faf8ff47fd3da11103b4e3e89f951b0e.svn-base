
<!--pages/apply_success/apply_success.wxml-->
<view wx:if="{{status==1}}">
  <view class="iconheader">
    <icon type="success" size="70" />
  </view>
  <view style="display: flex;justify-content: center;white-space: normal;">
    <text class="suc">报名成功</text>
  </view>
  <view class="suc_up">
    <text>电子票已生成！</text>
  </view>
  </view>

  <view wx:if="{{status==0}}">
  <view class="iconheader">
    <icon type="info" size="70" />
  </view>
  <view style="display: flex;justify-content: center;white-space: normal;">
    <text class="suc">提交成功</text>
  </view>
  <view class="suc_up">
    <text>等待管理员审核！</text>
  </view>
  </view>

  <view class="body" wx:for="{{item}}">
    <!--活动名称-->
    <view style="display: flex;justify-content:center;">
      <text style="font-size:28rpx;line-height: 6rpx; letter-spacing: -0.6rpx;">{{item.funsname}}</text>
    </view>

    <!--开始时间-->
    <view style="margin-top: 18rpx;">
      <text class="starttime">开始时间：{{item.starttime}}</text>
    </view>

    <!--报名信息-->
    <view style="width:461.5rpx;margin-top: 20rpx;display:flex;align-items:center;justify-content: space-between">
      <text class="info_msg">报名信息：{{item.info_msg}}</text>
      <text class="sort">{{item.sort}}</text>
      <text class="sort">{{item.price}}</text>
    </view>

    <!--支付方式-->
    <view style="margin-top: 20rpx;">
      <text class="sort">支付方式：{{item.pageway}}</text>
    </view>

    <!--交易单号-->
    <view style="margin-top: 17rpx;">
      <text class="sort">交易单号：{{item.details}}</text>
    </view>
  </view>
  <view wx:if="{{status==1}}">
    <button type="primary" style="margin:59rpx 30rpx 0 30rpx;">查看电子票</button>
  </view>

  <view wx:if="{{status==0}}">
    <button type="primary" style="margin:59rpx 30rpx 0 30rpx;">返回活动详情</button>
  </view>