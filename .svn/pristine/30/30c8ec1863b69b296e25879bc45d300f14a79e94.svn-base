var app = getApp()
Page({
  data: {
    items: [
      { txt: '徒步', isOn: false },
      { txt: '跑步', isOn: false },
      { txt: '骑行', isOn: false },
      { txt: '登山', isOn: false },
      { txt: '足球', isOn: false },
      { txt: '野营', isOn: false },
      { txt: '钓鱼', isOn: false },
      { txt: '球类', isOn: false },
      { txt: '摄影', isOn: false },
      { txt: '潜水', isOn: false },
      { txt: '自驾', isOn: false },
    ]
  },
  onLoad: function () {
  },
  on: function (e) {
    var items = this.data.items
    items[e.currentTarget.id].isOn = !items[e.currentTarget.id].isOn
    this.setData({
      items: items
    })
  }
})
