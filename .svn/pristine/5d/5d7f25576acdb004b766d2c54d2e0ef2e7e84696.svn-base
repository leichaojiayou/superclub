.nd_header {
  margin: 0 3.3% 0 3.3%;
}

.nd_img {
  background-color: rgb(241, 241, 241);
  width: 154rpx;
  height: 154rpx;
  flex-shrink: 0;
}

/*潍坊市马拉松运动协会2017黄河口东营-国。。样式*/

.nd_name {
  white-space: normal;
  letter-spacing: -0.4px;
  line-height: 22px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/*票价名称样式*/

.nd_time {
  color: rgb(191, 191, 191);
  margin-top: 0.9%;
}

/*名额保留时间*/

.it_remain {
  font-size: 26rpx;
  letter-spacing: -0.3pt;
  color: rgb(255, 126, 86);
  white-space: normal;
}

/*报名费用样式*/

.money {
  color: rgb(61, 209, 161);
  white-space: nowrap;
}

/*取消报名 修改报名 去支付 这整一框*/

.it_all {
  position: absolute;
  right: 3%;
}

/*取消报名 修改报名 去支付 每一格的样式*/

.it {
  border-style: solid;
  border-width: 1px;
  height: 30px;
  width: 72px;
  border-radius: 3px;
  justify-content: center;
}

.it_all, .it, .nd_header, .sort, .nd_time {
  display: flex;
  align-items: center;
}

.sort, .nums, .nd_time, .it {
  font-size: 26rpx;
}

.nd_name, .money {
  font-size: 30rpx;
}

.common2 {
  /*border-bottom: 1px solid rgb(230, 230, 230);*/
  position: relative;
  padding-bottom: 25px;
  background: #fff;
}

.body_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.3%;
}
