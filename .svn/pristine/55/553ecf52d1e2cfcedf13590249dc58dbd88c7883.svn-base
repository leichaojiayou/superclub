<view class="top">
活动标题
</view>

<block wx:for="{{groupUnits}}" wx:for-item="group"  wx:for-index="idx">
<!-- 最外层循环 -->

<!-- 组名 -->
<view class="item">
  <view class="text">
    {{group.groupName}}
  </view>
</view>

<view>
  <scroll-view scroll-x scroll-y>
    <view class="body">
       <!-- 表格头部-->
       <view class="body_item">
        <block wx:for="{{title}}" for-index="index">
          <view wx:if="{{index%2==0}}" class="body_item_1" style="  background: rgb(255, 255, 255);">
            {{item}}
          </view>
          <view wx:else class="body_item_1" style="background: rgb(247, 255, 253);">
            {{item}}
          </view>
        </block>
      </view>

      <!-- 表格内容 -->
      <block wx:for="{{group.applyUnits}}" wx:for-item="apply">

          <view class="body_item">
          <block wx:for="{{apply.contents}}" wx:for-item="value" for-index="index">
              <view wx:if="{{index%2==0}}" class="body_item_1" style="  background: rgb(255, 255, 255);">
                {{value}}
              </view>
              <view wx:else class="body_item_1" style="background: rgb(247, 255, 253);">
                {{value}}
              </view>
           </block>
           </view>

      </block>

    </view>
  </scroll-view>
</view>

<!-- 最外层循环 -->
</block>

