/*topview*/

.topview {
  background-color: rgb(255, 255, 255);
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  top: 0;
  height: 8%;
  width: 100%;
}

.topview_1 {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 50%;
}

.topview_1_1 {
  color: rgb(26, 26, 26);
  font-size: 32rpx;
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  border-bottom: 8rpx solid rgb(61, 209, 164);
}

.topview_1_2 {
  color: rgb(142, 142, 142);
  font-size: 32rpx;
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: center;
  width: 160rpx;
}

/*没有消息*/

.noMessagges {
  padding-top: 252rpx;
  font-size: 26rpx;
  color: rgb(142, 142, 142);
  text-align: center;
}

/*循环list*/

.midview {
  border-top: 1rpx solid rgb(230, 230, 230);
  display: flex;
  background-color: rgb(255, 255, 255);
}

/*图片*/

.img {
  margin: 31rpx 29rpx 29rpx 28rpx;
  width: 110rpx;
  height: 110rpx;
  background-color: rgb(234, 234, 234);
}

.text_view {
  padding-top: 46rpx;
  padding-right: 29rpx;
  padding-bottom: 29rpx;
  width: 560rpx;
}

.text_view_1 {
  display: flex;
  justify-content: space-between;
}

/*字体*/

.text_style1 {
  width: 374rpx;
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.text_style2 {
  color: rgb(142, 142, 142);
  width: 143rpx;
  font-size: 24rpx;
}

.text_style3 {
  margin-top: 29rpx;
  line-height: 44rpx;
  font-size: 26rpx;
  color: rgb(142, 142, 142);
  word-wrap: break-word;
  white-space: normal;
}

/*俱乐部消息*/

.body {
  border-top: 1rpx solid rgb(230, 230, 230);
  border-bottom: 1rpx solid rgb(230, 230, 230);
  background-color: rgb(255, 255, 255);
  margin-top: 20rpx;
  padding: 31rpx 30rpx 42rpx 28rpx;
}

.item_t1 {
  font-size: 24rpx;
  letter-spacing: -0.6rpx;
  color: rgb(142, 142, 142);
  display: flex;
  justify-content: space-between;
}

.item_img {
  height: 80rpx;
  width: 80rpx;
}

.item_t2 {
  font-size: 32rpx;
  margin-right: 27rpx;
  margin-top: 31rpx;
  display: flex;
  align-items: flex-start;
}

.item_t2_1 {
  padding-top: 12rpx;
  width: 578rpx;
  display: flex;
  flex-flow: column;
  align-items: flex-start;
  margin-left: 27rpx;
}

.item_t2_text {
  font-size: 32rpx;
  letter-spacing: -0.8rpx;
}

.item_t2_text1 {
  margin-top: 24rpx;
  letter-spacing: -0.6rpx;
  line-height: 38rpx;
  font-size: 26rpx;
  letter-spacing: -0.6rpx;
  color: rgb(142, 142, 142);
  word-wrap: break-word;
  white-space: normal;
}

.body_foot {
  font-size: 32rpx;
  letter-spacing: -0.8rpx;
  margin-top: 54rpx;
  display: flex;
  justify-content: space-around;
}
