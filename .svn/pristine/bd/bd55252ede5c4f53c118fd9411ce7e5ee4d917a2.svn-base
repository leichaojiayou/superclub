.right_errow {
  position: absolute;
  width: 18rpx;
  height: 30rpx;
  right: 4%;
  top: 40%;
  opacity: 20%;
}
.right_errow2 {
  width: 18rpx;
  height: 30rpx;
  opacity: 20%;
}
.head, .container {
  background-color: rgb(255, 255, 255);
  border-top: 0.5pt solid rgb(230, 230, 230);
  border-bottom: 0.5pt solid rgb(230, 230, 230);
  display: flex;
}

.head {
  flex-direction: row;
  margin: 16.5px 0 20px 0;
  align-items: center;
  position: relative;
}

.head_img {
  height: 65.5px;
  width: 65.5px;
  margin: 18.5px 16px 20.5px 15.5px;
  border-radius: 5px;
  background: rgb(232, 232, 232);
}

.head_txt {
  display: flex;
  flex-direction: column;
  width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container {
  flex-direction: column;
  margin-bottom: 20pt;
}

.container_title {
  margin: 20.5px 0 20px 16px;
}

.container_title, .head_name {
  letter-spacing: -0.4pt;
  font-size: 17px;
}
.des_txt {
  font-size: 13px;
  letter-spacing: -0.3pt;
  color: rgb(142, 142, 142);
  white-space: normal;
}

.des_txt2{
  font-size: 26rpx; 
  letter-spacing: -0.3pt;
  color: rgb(26, 26, 26);
}
.list_img{
   width: 39px;
  height: 39px;
  opacity: 30%;
  
}
.detail_title{
    font-size: 22px;
    letter-spacing: -0.5pt;
    line-height: 30px;
    text-align: justify;
}
