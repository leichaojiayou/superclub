/*头样式*/

.header {
  padding: 87rpx 69rpx 70rpx 45rpx;
  justify-content: space-between;
}

.header, .meta_item, .body, .body_item, .foot {
  display: flex;
  background-color: rgb(255, 255, 255);
}

.meta_item {
  flex-direction: column;
  align-items: center;
 
}

.sort_num {
  margin-top: 2.9vh;
  font-size: 38rpx;
  letter-spacing: -1rpx;
  width: 120rpx;
  overflow: hidden;
  text-align: center;
}

/*body样式*/

.body {
  padding-top: 69rpx;
  flex-wrap: wrap;

  display: flex;
  justify-content: space-around;
  align-items: center;
}

.body_item {
  flex-direction: column;
  align-items: center;
  width: 33.3%;
  /*margin-bottom: 8.7vh;*/
}

/*foot*/

.foot {
  position: relative;
  flex-wrap: wrap;
  margin-top: 2rpx;
  padding: 63rpx 161rpx 0 161rpx;
  justify-content: space-around;
  border-bottom: 86rpx solid white;
}

.share {

  position: absolute;
  top: -20rpx;
  left: 25%;
    font-size: 26rpx;
  letter-spacing: -0.6rpx;
  color: rgb(142, 142, 142);
  white-space: nowrap;
}



