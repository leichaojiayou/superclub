page {
  background-color: rgb(246, 246, 246);
  white-space: normal;
  /*overflow: hidden;*/
  /*text-overflow: ellipsis;*/
  /*white-space: nowrap;*/
  /*flex-shrink: 0;*/
}
.hover-btn{
    opacity: .7;
}
.hover-list{
  background: rgb(142, 142, 142);
}
.right-arrow{
  width: 18rpx;
  height: 31rpx;
  opacity: 20%;
}

.right-arrow-absolute{
  width: 18rpx;
  height: 31rpx;
  opacity: 20%;
  position: absolute;
  right: 30rpx;
  /*top: 40%;*/
}

.head, .container {
  background: rgb(255, 255, 255);
  border-top: 1rpx solid rgb(230, 230, 230);
  border-bottom: 1rpx solid rgb(230, 230, 230);
  display: flex;
}

.head {
  flex-direction: row;
  margin: 16.5px 0 20px 0;
  align-items: center;
  position: relative;
}

.head_img {
  height: 65.5px;
  width: 65.5px;
  margin: 18.5px 16px 20.5px 15.5px;
  border-radius: 10rpx;
  background: rgb(232, 232, 232);
}

.head_txt {
  display: flex;
  flex-direction: column;
  width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container {
  flex-direction: column;
  margin-bottom: 42rpx;
}

.container_title {
  padding: 41rpx 0 10rpx 32rpx;
}

.container_title, .head_name {
  
  font-size: 17px;
}
.des_txt {
  font-size: 26rpx;
  
  color: rgb(142, 142, 142);
  white-space: normal;
}

.des_txt2{
  font-size: 26rpx; 
  
  color: rgb(26, 26, 26);
}
.list_img{
   width: 39px;
  height: 39px;
  opacity: 30%;
  
}
.detail_title{
    font-size: 22px;
    letter-spacing: -0.5pt;
    line-height: 30px;
    text-align: justify;
}
.green_txt{
  font-size: 19px;
  letter-spacing: -0.5pt;
  color: rgb(61, 209, 164);
}
.green_txt2{
  font-size: 12px;
  letter-spacing: -0.3pt;
  line-height: 3pt;
  text-align: left;
  color: rgb(61, 209, 164);
}
.green_txt3{
  font-size: 19pt;
  line-height: 3pt;
  letter-spacing: -0.5pt;
  color: rgb(61, 209, 165);
  text-align: left;
}
.green_txt4{
  font-size: 13px;
  line-height: 20pt;
  letter-spacing: -0.3pt;
  color: rgb(61, 209, 164);
}
.botbtn {
  background-color: rgb(61, 209, 164);
  color: rgb(255, 255, 255);
  font-size: 18px;
  letter-spacing: -0.4pt;
}
.msg_txt{
  font-size: 15px;
  letter-spacing: -0.4pt;
  text-align: left;
}
.gray_txt{
  color:rgb(142, 142, 142);
  font-size: 12px;
}
.row_item{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 14pt 20pt 14pt 14pt;
    position: relative;
    border-bottom: 1rpx solid rgb(230, 230, 230);
}
.white_txt{
  color: #fff;
  font-size: 19px;
  letter-spacing: -0.5pt;
}

/*公共按钮*/
.zan-btn {
  height: 8vh;
  width: 100%;
  position: relative;
  color: #333;
  background-color: #fff;
  margin-bottom: 10px;
  padding-left: 15px;
  padding-right: 15px;
  border-radius: 2px;
  border: 1rpx solid #e5e5e5;
  font-size: 16px;
line-height: 8vh;
  box-sizing: border-box;
  text-decoration: none;
  text-align: center;
  vertical-align: middle;
}
.zan-btn--large {
  border-radius: 0;
  margin-bottom: 0;
  border: none;
  /*line-height: 50px;
  height: 50px;*/
}

.zan-btn--warn {
  color: #fff;
  background-color: rgb(61, 209, 164);
  border-color: #f85;
}




