/*header的样式*/

.header {
  background-color: rgb(255, 255, 255);
  margin-top: 32rpx;
  display: flex;
  align-items: center;
  position: relative;
  border-top: 1rpx solid rgb(229, 229, 229);
}

.header_txt {
  font-size: 30rpx;
  letter-spacing: -0.8rpx;
  margin: 80rpx 0 78rpx 29rpx;
}

.header_img {
  position: absolute;
  right: 10.3%;
  top: 15.3%;
  height: 130rpx;
  width: 130rpx;
  border-radius: 10rpx;
  background-color: rgb(249, 248, 248);
  border: 1rpx solid rgb(180, 180, 180);
}

.header_img1 {
  width: 55rpx;
  height: 55rpx;
  margin: 16.5pt 16pt 16pt 16.5pt;
}

/*名称到简介的样式*/

.name_item {
  position: relative;
  display: flex;
  border-top: 1rpx solid rgb(229, 229, 229);
  background-color: rgb(255, 255, 255);
  margin-left: 29rpx;
  align-items: center;
  padding-top: 20rpx;
}

.name_txt {
  font-size: 30rpx;
  letter-spacing: -0.8rpx;
}

.name_txt1 {
  font-size: 34rpx;
  letter-spacing: -0.8rpx;
  position: absolute;
  right: 10.3%;
  top: 28.4%;
  padding-top: 18rpx;
}

