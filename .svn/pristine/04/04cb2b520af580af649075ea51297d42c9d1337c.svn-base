<scroll-view scroll-y="true" style="height:100vh;">
<!--pages/huodongfengmian/huodongfengmian.wxml-->
<!--徒步-->
<view class="body">
  <view class="body_item1">
    <view class="txt_position">
      <text class="t34rpx">徒步</text>
    </view>
  </view>

  <!--循环体样式-->
  <view class="body_item">

    <!--循环指令-->
    <view wx:for="{{item}}"  bindtap="enterPreviewMode">

      <!--开始循环图片-->
      <image src="{{item.img}}" class="img" mode="aspectFill"></image>
    </view>
  </view>
</view>
<!--骑行-->
<view class="body">
  <view class="body_item1">
    <view class="txt_position">
      <text class="t34rpx">骑行</text>
    </view>
  </view>

  <!--循环体样式-->
  <view class="body_item">

    <!--循环指令-->
    <view wx:for="{{item}}">

      <!--开始循环图片-->
      <image src="{{item.img}}" class="img" mode="aspectFill" bindtap="enterPreviewMode"></image>
    </view>
  </view>
</view>
<!--跑步-->
<view class="body">
  <view class="body_item1">
    <view class="txt_position">
      <text class="t34rpx">跑步</text>
    </view>
  </view>

  <!--循环体样式-->
  <view class="body_item">

    <!--循环指令-->
    <view wx:for="{{item}}">

      <!--开始循环图片-->
      <image src="{{item.img}}" class="img" mode="aspectFill" bindtap="enterPreviewMode"></image>
    </view>
  </view>
</view>

<!-- 预览模式 -->
<swiper class="swiper-container" duration="400" current="{{previewIndex}}" bindtap="leavePreviewMode" style="display:{{previewMode ? 'block' : 'none'}};">
  <block wx:for="{{mediaList}}" wx:for-item="media">
    <swiper-item>
      <image src="{{media.content}}" mode="aspectFit"></image>
    </swiper-item>
  </block>
</swiper>

</scroll-view>