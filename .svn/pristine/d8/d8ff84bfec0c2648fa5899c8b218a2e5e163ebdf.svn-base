<view class="topview">
  <view class="topview_1">
    <view bindtap="bindButton" data-id="onActivity" class="{{click_onActivity?'topview_1_1':'topview_1_2'}}">
      <text bindtap="bindButton" data-id="onActivity">活动消息</text>
    </view>
  </view>
  <view class="topview_1">
    <view bindtap="bindButton" data-id="onClub" class="{{click_onActivity?'topview_1_2':'topview_1_1'}}">
      <text bindtap="bindButton" data-id="onClub">俱乐部消息</text>
    </view>
  </view>
</view>
<!--活动消息列表-->
<scroll-view style="height:100vh" scroll-y="true">
  <view wx:if="{{click_onActivity}}">
    <view wx:if="{{actMsgs.lenght!=0}}" style="border-bottom: 1rpx solid rgb(230, 230, 230);">
      <view class="midview" wx:for="{{actMsgs}}" wx:key="key_msg">
        <image src="{{item.content.image}}" class="img"></image>
        <view class="text_view">
          <view class="text_view_1">
            <text class='text_style1'>{{item.content.title}}</text>
            <text class='text_style2'>{{item.time}}</text>
          </view>
          <text class='text_style3'>{{item.content.content}}</text>
        </view>
      </view>
    </view>
    <view wx:if="{{actMsgs.lenght==0}}" class="noMessagges">
      <text>暂无待办事项</text>
    </view>
  </view>
  <!--俱乐部消息列表-->
  <view wx:if="{{!click_onActivity}}" style="margin-bottom:70rpx;">
    <view class="body" wx:for="{{clubMsgs}}" wx:key="key_msg" style="{{index==0?'margin-top:0':''}}">
      <view class="item_t1">
        <text>申请加入俱乐部</text>
        <text>{{item.time}}</text>
      </view>
      <view class="item_t2">
        <image src="{{item.user.avatar}}" class="item_img"></image>
        <view class="item_t2_1">
          <text class="item_t2_text">{{item.user.nick}}</text>
          <text class="item_t2_text1">{{item.joinInfo}}</text>
        </view>
      </view>
      <view class="body_foot" wx:if="{{item.joinStatus==-1}}">
        <text bindtap="bindApprove" data-info="{{item}}" style="color:rgb(61,209,164)">通过</text>
        <text style="color:rgb(229,229,229)">|</text>
        <text bindtap="bindRefuse" data-info="{{item}}" style="color:rgb(255,128,86)">拒绝</text>
      </view>
      <view class="body_foot" wx:elif="{{item.joinStatus==1}}">
        <text style="color:rgb(142,142,142)">已通过</text>
      </view>
      <view class="body_foot" wx:elif="{{item.joinStatus==0}}">
        <text style="color:rgb(142,142,142)">自动加入</text>
      </view>
      <view class="body_foot" wx:elif="{{item.joinStatus==2}}">
        <text style="color:rgb(142,142,142)">已拒绝</text>
      </view>
      <view class="body_foot" wx:else>
        <text style="color:rgb(142,142,142)">退出俱乐部</text>
      </view>
    </view>
  </view>
</scroll-view>