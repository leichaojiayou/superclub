/* pages/helpenlist/helpenlist.wxss */
@import "/template/toasts/toasts.wxss";

.container {
  margin-top: 30rpx;
  margin-bottom: 18rpx;
}

.batten {
  padding: 0 30rpx 16px 30rpx;
  white-space: normal;
}

.btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  height: 88rpx;
  margin: 0 30rpx;
  border-top: 1rpx solid #e6e6e6;
}

.btn-line {
  position: absolute;
  top: 29rpx;
  left: 50%;
  width: 2rpx;
  height: 30rpx;
  background: rgb(229, 229, 229)
}

.btn-item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  font-size: 28rpx;
  color: rgb(90, 90, 90);
}
.apply-status{
  position: absolute;
  top: 38rpx;
  right: 30rpx;
  font-size: 24rpx;
  color: rgb(141, 141, 141);
}
.btn-icon {
  width: 24rpx;
  height: 22rpx;
  margin-right: 10rpx;
}

.txtmargin {
  margin-right: 25px;
}

.scroll {
  height: 100vh;
  background-color: white;
}

.payText {
  font-size: 24rpx;
  color: rgb(141, 141, 141);
}
