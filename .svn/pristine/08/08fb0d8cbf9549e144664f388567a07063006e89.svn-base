<template name="listimg">
  <view bindtap="nato" id="{{index}}" class="body_item">
    <image src="{{item.img}}" class="list_img" style="margin-bottom:10px;"></image>
    <text class="des_txt2">{{item.content}}</text>
  </view>
</template>


<template name="common_one" >
  <view style="display:flex;align-items:center;position:relative;margin-bottom:25px" wx:for="{{item}}"  bindtap="clubhome">

    <!--图片-->
    <view class="header">
      <image src="{{item.header_img}}" class="header_img"></image>
    </view>

    <!--中间这一框  三列-->
    <view style="flex-direction: column;display:flex;margin-left:3%;}">

      <!--俱乐部名字-->
      
      <text class="club_id">{{item.club}}</text>
      
      
      <!--中间分类-->
      <view class="sort">
        <view wx:for="{{item1}}" class="sort_item" style="background-color:{{item.color}}">
          <text>{{item.sort}}</text>
        </view>
      </view>
      <text class="nums">{{item.nums}}个新活动</text>
    </view>

    <!--箭头-->
    <image src="../../../assets/images/right-errow.png" class="right-arrow-absolute" mode="aspectFill"></image>
  </view>
</template>

<!--第二个模板-->
<template name="common_two">
  <view bindtap="nato_charge_activity" class="common2" >

    <!--整个大框-->
    <view class="nd_header" wx:for="{{item3}}">

      <!--图片-->
      <view class="nd_img">
        <image src="{{item.img}}"></image>
      </view>

      <!--图片右边的大框-->
      <view style="display:flex;flex-direction: column;margin-left:3.2%">

        <!--文字-->
        <text class="nd_name">{{item.name}}</text>

        <!--时间这一栏-->
        <view class="nd_time">
          <text style="margin-right:1.5%;">时间</text>
          <text>{{item.time}}</text>
        </view>

        <!--俱乐部名称和钱这一栏-->
        <view style="display:flex;justify-content: space-between; align-items: center;margin-top:0.8%;">

          <text class="nd_time" wx:if="{{item.club_name!=''}}">{{item.club_name}}</text>
          <text wx:if="{{item.enlistnumber =='null'}}" style="display:none"></text>
          <text class="nd_time" wx:elif="{{item.enlistnumber!=''}}">报名{{item.enlistnumber}}</text>
          
          
          
          <text class="money">{{item.money}}</text>

          <!--短信-->
            <text wx:if="{{item.freemsg == ''}}" class="gray_txt nofreemsg freemsg">暂无免费短信</text>
            <text wx:elif="{{item.freemsg == 'null'}}" style="display:none"></text>
            <text wx:elif="{{item.freemsg != ''}} " class="gray_txt havefreemsg freemsg">可免费短信<text class="green_txt2">{{item.freemsg}}</text>条</text>
           
        </view>
      </view>
    </view>

    <!--foot-->
    <view style="margin: 3.6% 3.3% 3.5% 3.3%;display:flex;margin-bottom:3.6vh;align-items:center;">
      <text wx:for="{{item5}}" class="des_txt">{{item.upload}}</text>

      <!--取消报名 修改报名 去支付-->
      <view class="it_all">
        <view wx:for="{{item4}}" for-index="index" style="margin-left: 10px;">
          <view class="it" style="color:{{item.color}};border-color:{{item.color}};" catchtap="changeOrPay" id="{{index}}">
            <text id="{{index}}" class="" catchtap="changeOrPay">{{item.it}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</template>

<!--引用模板-->
<template is="common_one" data="{{item,item1}}" />
<template is="common_two" data="{{item3,item4,item5}}" />