<template name="common_one">
  <view style="display:flex;align-items:center;position:relative;margin-bottom:25px" bindtap="clubHome" data-club="{{club}}" data-type="{{club.type}}">
    <view style="display:flex;align-items:flex-start; margin-left: 14rpx;">

      <!--图片-->
      <view class="header">
        <image src="{{club.logo}}" class="header_img" mode="aspectFill"></image>
      </view>

      <!--中间这一框  三列-->
      <view style="flex-direction: column;display:flex;margin-left:3%;margin-top:-12rpx;">

        <!--俱乐部名字-->
        <view class="club-index-title">
          <text class="club_id txt-overflow">{{club.title}}</text>
        </view>
        <view style="display:flex; justify-content:space-between;align-items:center;height: 42rpx;">

          <!--中间分类-->

          <!--<view class="sort">
            <view wx:for="{{club.features}}" wx:key="feature-index" wx:for-item="feature">
              <text wx:if="{{index == 0}}" class="kuangkuang" style="background-color:rgb(145, 213, 192)">{{feature.name}}</text>
              <text wx:elif="{{index == 1}}" class="kuangkuang" style="background-color:rgb(172, 198, 237)">{{feature.name}}</text>
              <text wx:else class="kuangkuang" style="background-color:rgb(227, 192, 163)">{{feature.name}}</text>
            </view>
          </view>-->
          <view class="sort">
            <view class="items-tap">
              <block wx:for="{{club.features}}" wx:key="key_feature" wx:for-item="feature">
                <text wx:if="{{index == 0}}" class="kuangkuang master-project-overflow" style="background-color:rgb(145, 213, 192)">{{feature.name}}</text>
                <text wx:elif="{{index == 1}}" class="kuangkuang master-project-overflow" style="background-color:rgb(172, 198, 237)">{{feature.name}}</text>
                <text wx:else class="kuangkuang master-project-overflow" style="background-color:rgb(227, 192, 163)">{{feature.name}}</text>
              </block>
            </view>
          </view>
        </view>
        <view class="nums" wx-if="{{club.newActCount != 0}}">{{club.newActCount}}个新活动</view>
      </view>
    </view>
    <view style="display:flex;align-items:center;justify-content: flex-end;">
      <view wx-if="{{club.newActCount != 0}}" class="index-tip">{{club.newActCount}}</view>

      <!--箭头-->
      <image src="https://cdn.51julebu.com/xiaochengxu/image/black-errow@2x.png" class="right-arrow-absolute" mode="aspectFill"></image>
    </view>
  </view>
</template>