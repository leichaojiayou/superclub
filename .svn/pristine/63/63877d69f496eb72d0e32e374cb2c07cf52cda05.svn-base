<view class="bindphone">
  <label class="des_txt2">{{msg.heartext}}</label>
  <view class="inputview">
    <input type="number" maxlength="16" wx:if="{{statu==1 ||statu==2}}" placeholder="{{msg.input}}" placeholder-class="psection" />
    <input type="password" maxlength="16" password="true" wx:if="{{statu==3 }}" placeholder="{{msg.input}}" placeholder-class="psection" />
    <input type="number" wx:if="{{statu==4 }}" maxlength="16" value="{{msg.input_number}}" placeholder="{{msg.input}}" placeholder-class="psection" />
    <label class="inputlabel">{{msg.input_text}}</label>
  </view>
  <view class="bindphone1">
    <button bindtap="buttonStatu1tap" class="buttonStatu1" wx:if="{{statu==1}}">{{msg.button}}</button>
    <button loading="true" class="buttonStatu2" wx:if="{{statu==2}}">{{msg.button}}</button>
    <button bindtap="buttonStatu3tap" class="buttonStatu1" wx:if="{{statu==3}}">{{msg.button}}</button>
    <button bindtap="buttonStatu1tap" class="buttonStatu1" wx:if="{{statu==4}}">{{msg.button}}</button>
    <view class="bindphone2">
      <label class="bottext1" wx:if="{{statu==3}}">{{msg.text1}}</label>
      <label class="bottext2" wx:if="{{statu==3}}">{{msg.text2}}</label>
    </view>
  </view>
</view>