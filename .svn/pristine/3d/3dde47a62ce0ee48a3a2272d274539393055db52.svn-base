import api from '../request.js'

/**
 * 活动详情-报名列表
 * 文档：http://doc.iweju.com/FitNesse.WejuBaHttp.ActivityDoc.ActivityAdminApplyList
 * @param param  activity_id；start；count
 */
var getActApplyList = (param) => api.wxRequest(param, "/ba/activity/applet/apply_list");
/**
 * 活动详情
 * 文档：http://doc.iweju.com/FitNesse.WejuBaHttp.ActivityDoc.ActivityAdminGetActivity
 * @param param activity_id；club_id
 */
var getActDetail = (param) => api.wxRequest(param, '/ba/activity/applet/get_activity');
/**
 * 活动评论列表
 * 文档：http://doc.iweju.com/FitNesse.WejuBaHttp.ActivityDoc.ActivityCommentList
 * @param param  activity_id；start；count
 */
var getActComment = (param) => api.wxRequest(param, '/ba/activity/applet/comment_list');

/**
 * 创建活动评论
 * 文档：http://doc.iweju.com/FitNesse.WejuBaHttp.ActivityDoc.ActivityCreateComment
 * @param param activity_id；content；refCommentId:评论人ID
 */
var createActComment = (param) => api.wxRequest(param, '/ba/activity/applet/create_comment');

/**
 * 点赞列表
 * 文档：http://doc.iweju.com/FitNesse.WejuBaHttp.ActivityDoc.ActivityLikeList
 * @param param activity_id；start；count
 */
var getLikeList = (param) => api.wxRequest(param, '/ba/activity/applet/like_list');

/**
 * 点赞or取消点赞操作
 * 文档：http://doc.iweju.com/FitNesse.WejuBaHttp.ActivityDoc.ActivityLikeAndDeleteLike
 * @param param  activity_id：活动ID；type：类型, 0为点赞, 1为取消赞
 */
var likeAction = (param) => api.wxRequest(param, '/ba/activity/applet/likeanddeletelike');

/**
 * 自己报名接口
 * 文档：http://doc.iweju.com/FitNesse.WejuBaHttp.ActivityDoc.ActivityApplySelf
 * @param param
 * activity_id：活动ID；
 * data：报名数据；
 * ticket_id：票种ID；
 * paid：付款状态, 0为未付款, 1为已付款
 * phone ：当自己报名时, 自己的手机号码
 * authCode ： 验证码
 * applyPlatform： 用户报名所使用的平台, 0为APP(默认), 1为电脑WEB, 2为手机WEB
 * groupNum ：队伍ID
 * groupName  ：队伍名
 * isLeader ： 是否是队长
 * isAuthPhone：是否打开手机验证开关
 */
var actApplySelf = (param) => api.wxRequest(param, '/ba/activity/applet/apply_self');

/**
 * 帮人报名
 * 文档：http://doc.iweju.com/FitNesse.WejuBaHttp.ActivityDoc.ActivityApplyHelp
 * @param param 参数同自己报名
 */
var actApplyHelp = (param) => api.wxRequest(param, '/ba/activity/applet/apply_help');

/**
 * 活动参与人数: http://doc.iweju.com/FitNesse.WejuBaHttp.V15Doc.ActivityAdminListAll
 */
const getActUsers = (param) => api.wxRequest(param, "/ba/activity/admin/apply/list_all")

module.exports = {
    getActDetail: getActDetail,
    getActApplyList: getActApplyList,
    getActComment: getActComment,
    createActComment: createActComment,
    getLikeList: getLikeList,
    likeAction: likeAction,
    actApplySelf: actApplySelf,
    actApplyHelp: actApplyHelp
}