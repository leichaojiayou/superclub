<import src="../../../template/manage/clubManager.wxml" />
<import src="../../../template/common/common.wxml" />
<scroll-view style="height:100vh" scroll-y="true">
  <!--head-->
  <view class="back_head">
    <view class="back_top">
      <image src="{{club.logo != null ? club.logo : '../../../assets/images/club.png'}}" class="head_img" mode="aspectFit"></image>
      <text class="white_txt">{{club.title}}</text>
    </view>
    <view class="back_foot">
      <block wx:for="{{threelabel}}" wx:key="key">
        <template is="clubmsg" data="{{item}}" />
      </block>
      <label class="xiegan label_txt">/</label>
      <label class="xiegan2 label_txt">/</label>
    </view>
  </view>
  <view class="back_foot">
    <block wx:for="{{item}}" wx:key="key">
      <view bindtap="nato" id="{{index}}" class="body_item1">
        <image src="{{item.img}}" class="list_img" style="margin-bottom:10px;"></image>
        <text class="des_txt2">{{item.content}}</text>
        <view class="point" wx:if="{{index == 3 & club.joinUnCheckNum != 0}}">
          <text>{{club.joinUnCheckNum}}</text>
        </view>
      </view>
    </block>
  </view>
  <view class="tran des_txt" style="margin-bottom:20px">
    <view class="line" style="left:50px;"></view>
    <view class="line" style="right: 50px;"></view>
    管理活动
  </view>
  <!--<template is="common_two" data="{{item3}}" style="border-bottom:1px solid white" />-->
  <view>
    <template is="item_act" data="{{acts}}" style="border-bottom:1px solid white" />
  </view>
  <view style="text-align:center;font-size:12px;color:rgb(229,229,229);margin-bottom:30px;">
    <text>THE END</text>
  </view>
  <template name="clubmsg">
    <view class="club_msg">
      <text class="label_txt" style="font-size:12px;">{{item.txt}}</text>
      <text class="label_txt">{{item.amount}}</text>
    </view>
  </template>
</scroll-view>