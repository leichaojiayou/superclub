<scroll-view scroll-y="true" style="height:100vh" bindscrolltoupper='reload' data-clubid="{{clubId}}">
  <!-- 头框 -->
  <view class="bigview">
    <!-- 名称  会长 副会长 -->
    <view class="itemView" wx:if="{{club.roleType === 2 || club.roleType === 3}}" bindtap="setClubName">
      <text>名称</text>
      <view class="itemView_foot">
        <view class="foot_text_view">
          <text class="bigsize_1" wx:if="{{!modifyTitle}}">{{club.title}}</text>
          <text class="bigsize_1"wx:else>{{modifyTitle}}</text>
        </view>
        <image class="right-arrow" src="{{page.img}}"></image>
      </view>
    </view>
    <!-- 名称  管理员 会员 非会员 -->
    <view wx:else class="itemView">
      <text>名称</text>
      <view class="foot_text_view foot-text-view-none">
        <text class="bigsize_1 ">{{club.title}}</text>
      </view>
    </view>
    <!-- ID 会长 副会长 -->
    <view class="itemView" wx:if="{{club.roleType === 2 || club.roleType === 3}}">
      <text>ID</text>
      <view class="itemView_foot">
        <view class="foot_text_view">
          <text class="bigsize">{{club.clubNo}}</text>
        </view>
      </view>
    </view>
    <!-- ID  管理员 会员 非会员 -->
    <view wx:else class="itemView">
      <text>ID</text>
      <view class="itemView_foot ">
        <text class="bigsize ">{{club.clubNo}}</text>
      </view>
    </view>
    <!-- logo 会长 副会长 -->
    <view class="itemView " style="height:190rpx" wx:if="{{club.roleType === 2 || club.roleType === 3}}"
          bindtap="setClubLogo">
      <text>Logo</text>
      <view class="itemView_foot ">
        <view class="foot_text_view ">
          <image class="logo_image " wx:if="{{!modifyLogo}}" src="{{club.logo}} "></image>
          <image class="logo_image " wx:else src="{{modifyLogo}}" mode="aspectFit"></image>
        </view>
        <image class="right-arrow " src="{{page.img}} "></image>
      </view>
    </view>
    <!-- logo  管理员 会员 非会员 -->
    <view wx:else class="itemView" style="height:190rpx">
      <text>Logo</text>
      <view class="itemView_foot">
        <image class="logo_image " src="{{club.logo}}"></image>
      </view>
    </view>
    <!-- 星级 会长 副会长 -->
    <view class="itemView item-show-removeBrode" wx:if="{{club.roleType === 2 || club.roleType === 3}}"
          style="border-bottom: 0;" bindtap="setGrade">
      <text>星级</text>
      <view class="itemView_foot ">
        <view class="foot_text_view foot-text-view-none">
          <image class="start_image " src="{{club.gradeImg}} "></image>
          <text class="bigsize ">{{club.score}}</text>
        </view>
        <image class="right-arrow " src="{{page.img}} "></image>
      </view>
    </view>
    <!-- 星级  管理员 会员 非会员 -->
    <view wx:else class="itemView item-show-removeBrode" bindtap="setGrade">
      <text>星级</text>
      <view class="itemView_foot">
        <view class="foot_text_view foot-text-view-none">
          <image class="start_image" src="{{club.gradeImg}} "></image>
          <text class="bigsize">{{club.score}}</text>
        </view>
        <image class="right-arrow " src="{{page.img}} "></image>
      </view>
    </view>
  </view>
  <!-- 成立时间之类资料框 -->
  <view class="bigview ">
    <!-- 地点 会长 副会长 -->
    <view class="itemView" wx:if="{{club.roleType === 2 || club.roleType === 3}}" bindtap="setAddress">
      <text>地点</text>
      <view class="itemView_foot ">
        <view class="foot_text_view ">
          <text class="bigsize">{{club.city.province}}{{club.city.cityName}}</text>
        </view>
        <image class="right-arrow " src="{{page.img}} "></image>
      </view>
    </view>
    <!-- 地点  管理员 会员 非会员 -->
    <view wx:else class="itemView">
      <text>地点</text>
      <view class="itemView_foot">
        <text class="bigsize">{{club.city.province}}{{club.city.cityName}}</text>
      </view>
    </view>
    <!-- 主打项目 会长 副会长 -->
    <view class="itemView" wx:if="{{club.roleType === 2 || club.roleType === 3}}" style="border-bottom: 0;"
          bindtap="setProjects">
      <text>主打项目</text>
      <view class="itemView_foot">
        <view class="foot_text_view">
          <block wx:for="{{modifyFeatures==null?club.features:modifyFeatures}}" wx:key="i" wx:for-index="index">
            <text wx:if="{{index == 0&&item.name}}" class="icon_text" style="background-color:rgb(145, 213, 192)">{{item.name}}</text>
            <text wx:elif="{{index == 1&&item.name}}" class="icon_text" style="background-color:rgb(172, 198, 237)">{{item.name}}</text>
            <text wx:elif="{{index == 2&&item.name}}" class="icon_text" style="background-color:rgb(227, 192, 163)">{{item.name}}</text>
          </block>
        </view>
        <image class="right-arrow " src="{{page.img}} "></image>
      </view>
    </view>
    <!-- 主打项目  管理员 会员 非会员 -->
    <view wx:else class="itemView item-show-removeBrode" style="border-bottom: 0;">
      <text>主打项目</text>
      <view class="itemView_foot">
        <view class="foot_text_view ">
          <block wx:for="{{club.features}}" wx:key="index">
            <text wx:if="{{index == 0&&item.name}}" class="icon_text" style="background-color:rgb(145, 213, 192)">{{item.name}}</text>
            <text wx:elif="{{index == 1&&item.name}}" class="icon_text" style="background-color:rgb(172, 198, 237)">{{item.name}}</text>
            <text wx:elif="{{index == 2&&item.name}}" class="icon_text" style="background-color:rgb(227, 192, 163)">{{item.name}}</text>
          </block>
        </view>
      </view>
    </view>
  </view>
  <!-- 俱乐部设置框 -->
  <view class="bigview" wx:if="{{club.roleType != 0 && club.roleType != 1 }}">
    <view class="itemView" wx:if="{{club.roleType != 4}}" bindtap="setJoinWay">
      <text>设置加入方式</text>
      <view class="itemView_foot ">
        <view class="foot_text_view " wx:if="{{club.needJoinCheck === 0}}">
          <text class="bigsize ">允许任何人加入</text>
        </view>
        <view class="foot_text_view " wx:else>
          <text class="bigsize ">需验证加入</text>
        </view>
        <image class="right-arrow " src="{{page.img}} "></image>
      </view>
    </view>
    <!-- 收款账户 -->
    <view class="itemView " style="border-bottom: 0; " wx:if="{{club.roleType === 2 || club.roleType === 3 }}"
          bindtap="setAccountGather">
      <text>收款账户</text>
      <!-- modifyPayeeType -->
      <view class="itemView_foot " >
        <view class="foot_text_view " wx:if="{{club.payeeType === 1}}">
          <text class="bigsize ">会长账户</text>
        </view>
        <view class="foot_text_view "wx:else>
          <text class="bigsize ">管理员代收</text>
        </view>
        <image class="right-arrow " src="{{page.img}} "></image>
      </view>
    </view>
  </view>
  <!-- 俱乐部管理员成员 -->
  <view class="bigview" wx:if="{{club.roleType != 0 && club.roleType != 1 }}">
    <view wx:if="{{club.roleType === 2}}" class="itemView" bindtap="setViceChariman">
      <text>任免副会长</text>
      <view class="itemView_foot ">
        <image class="right-arrow " src="{{page.img}} "></image>
      </view>
    </view>
    <view class="itemView" bindtap="setManager" wx:if="{{club.roleType != 4}}">
      <text>任免管理员</text>
      <view class="itemView_foot ">
        <image class="right-arrow " src="{{page.img}} "></image>
      </view>
    </view>
    <!-- 移除成员 -->
    <view class="itemView " style="border-bottom: 0;" bindtap="removeMember">
      <text>移除会员</text>
      <view class="itemView_foot ">
        <image class="right-arrow " src="{{page.img}} "></image>
      </view>
    </view>
  </view>
  <!-- 俱乐部简介 -->
  <view class="bigview">
    <view class="itemView" wx:if="{{club.roleType === 2 || club.roleType === 3}}" bindtap="setDeclaration">
      <text>宣言</text>
      <view class="itemView_foot " bindtap>
        <view class="foot_text_view ">
          <text class="bigsize_2">{{club.slogan}}</text>
        </view>
        <image class="right-arrow " src="{{page.img}} " bindtap></image>
      </view>
    </view>
    <view wx:else class="item-view-show">
      <text >宣言</text>
      <view class="itemView_foot ">
        <view class="foot_text_view">
          <text class="club-foot-show-text">{{club.slogan}}</text>
        </view>
      </view>
    </view>
    <!-- 简介   会长 副会长 -->
    <view class="itemView" style="border-bottom:none" wx:if="{{club.roleType === 2 || club.roleType === 3}}"
          >
      <text>简介</text>
      <view class="itemView_foot" catchtap="setDescription">
        <view class="foot_text_view ">
          <text class="bigsize_2">{{club.description}}</text>
        </view>
        <image class="right-arrow " src="{{page.img}} " ></image>
      </view>
    </view>
    
    <view wx:else class="item-view-show item-show-removeBrode">
      <text >简介</text>
      <view class="itemView_foot ">
        <view class="foot_text_view ">
          <text class="club-foot-show-text">{{club.description}}</text>
        </view>
      </view>
    </view>
  </view>
  <!-- 俱乐部成员统计 -->
  <view class="bigview " bindtap="tips">
    <view class="itemView club-count-member" style="border-bottom:none">
      <image class="statistics_icon " src="{{page.club_statistics_icon}} "></image>
      <view class="club-count">
        <text >俱乐部成员统计</text>
      </view>
      <view>
        <text >{{club.memberCount}}人</text>
      </view>
      <image class="right-arrow" src="{{page.img}}"></image>
    </view>
  </view>
  <!-- 按钮框 -->
  <view class="buttonview ">
    <button wx:if="{{club.roleType === 2}}" bindtap="deleteClub">删除俱乐部</button>
    <button wx:elif="{{club.roleType != 0 }}" bindtap="clubQuited">退出俱乐部</button>
    <button wx:else style="border: 1rpx solid rgb(61, 209, 164);background-color: rgb(61, 209, 164);" bindtap="oinClub">
    加入俱乐部
    </button>
  </view>
</scroll-view>