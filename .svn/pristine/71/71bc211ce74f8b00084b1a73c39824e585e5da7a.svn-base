<scroll-view scroll-y="true" style="height:100vh;">
<view class="body">
  <view class="bg">

    <!-- 标题-->
    <view>
      <input class="input_title" placeholder="输入活动主题"  value="{{title}}"/>
    </view>

    <!-- 内容 -->
    <scroll-view scroll-y="true" class="content_body">
      <view class="input_content">
        <block wx:for="{{contents}}" for-index="index">
          <image id="{{index}}" bindtap="delete" wx:if="{{item.type=='img'}}" src="{{item.text}}" mode="widthFix" style="width:100%;"></image>
          <text id="{{index}}" style="color:rgb({{item.color}});;font-weight:{{item.weight==true?'bold':'normal'}}" catchtap="con_tap" wx:if="{{item.type=='text'}}">{{item.text}}</text>
        </block>
      </view>
    </scroll-view>
  </view>
  <input value="{{test}}" catchblur="ok" placeholder="点击输入文字" bindinput="con_input" />

  <!-- 选择 -->
  <view class="choose" style="position:relative;">
    <view class="choose_color" hidden="{{isShowColor}}" bindtap="show_color">
      <view style="display:flex;" class="point1">
        <block wx:for="{{color}}" for-index="index">
          <view bindtap="choose_color" style="background:rgb({{item}});" id="{{index}}" class="point2"></view>
        </block>
      </view>
    </view>
    <view style="display:flex;">
      <image src="../../../assets/images/img.png" bindtap="choose_img" class="icon"></image>
      <image src="../../../assets/images/B.png" style="background:#{{isWeight==true?'696969':'eee'}};" class="icon_b icon" bindtap="choose_weight"></image>
      <image src="../../../assets/images/AA.png" class="icon"></image>
      <view style="background:rgb({{point_color}});" class="point" bindtap="show_color"></view>
    </view>
    <view class="look">
      预览
    </view>
  </view>

  <!-- list -->

  <!-- -->
  <view class="list_item" style="margin-top:41rpx;" bindtap="togglePicker">
    <view class="picker">
      <view>
        活动开始时间
        <text style="float:right;position:relative;z-index:100">{{begin}}</text>
      </view>
    </view>
    <image class="errow" src="../../../assets/images/right-errow.png"></image>
  </view>

  <!-- -->
  <view class="list_item">
    <view class="picker">
      <view>
        活动结束时间
        <text style="float:right;">{{end}}</text>
      </view>
    </view>
    <image class="errow" src="../../../assets/images/right-errow.png"></image>
  </view>

  <!-- -->
  <view class="list_item" style="margin-top:41rpx;">
    <view class="picker" bindtap="addActAddress">
      <view>
        活动地点
        <text style="float:right;width:310rpx;display:  -webkit-box;-webkit-line-clamp:  1;-webkit-box-orient:  vertical;overflow: hidden;text-overflow: ellipsis;text-align:right">{{address}}</text>
      </view>
    </view>
    <image class="errow" src="../../../assets/images/right-errow.png"></image>
  </view>

  <!-- -->
  <view class="list_item" bindtap="changeActCover">
    <view class="picker">
      活动封面
      <image class="headerImg" src="{{cover}}"></image>
    </view>
    <image class="errow" src="../../../assets/images/right-errow.png"></image>
  </view>
</view>
<view class="list_item" style="margin-top:41rpx;" bindtap="setActFee">
  <view class="picker">
    活动费用
    <text style="float:right;">免费</text>
  </view>
  <image class="errow" src="../../../assets/images/right-errow.png"></image>
</view>

<!-- 资料 -->
<view class="bg">
  <view class="list_item picker choose_body" style="margin-top:41rpx;">
    用户报名填写项
  </view>
  <view class="choose_user">
    <block wx:for="{{applyFields}}" for-index="index">
      <view id="{{index}}" bindtap="addApplyFields" style="color:rgb({{item.isCheck?'256,256,256':'89,215,176'}});background:rgb({{item.isCheck?'89,215,176':'256,256,256'}});" class="choose_user_item">{{item.text}}</view>
    </block>
  </view>
</view>
<view class="bg" style="margin-top:41rpx;">
  <view class="list_item">
    <view class="picker">
      更多报名设置
    </view>
    <view class="triangle">
      <view class="{{true?'css_icon_true':'css_icon_false'}}">
      </view>
    </view>
  </view>
  <view class="list_item">
    <picker class="picker">
      <view>
        报名截止时间
        <text style="float:right;">2017年12月22日 19:30</text>
      </view>
    </picker>
    <image class="errow" src="../../../assets/images/right-errow.png"></image>
  </view>
</view>
<view class="bg">
  <view class="list_item" bindtap="setActType">
    <view class="picker">
      活动类型
      <text style="float:right;">公开活动</text>
    </view>
    <image class="errow" src="../../../assets/images/right-errow.png"></image>
  </view>
  <view class="list_item" bindtap="setActSMSTips">
    <view class="picker" >
      短信通知
      <text style="float:right;">活动开始前24小时</text>
    </view>
    <image class="errow" src="../../../assets/images/right-errow.png"></image>
  </view>
</view>
<view class="bg" style="margin-top:41rpx;">
  <view class="list_item">
    <picker class="picker">
      报名人需审核
    </picker>
    <switch type="switch" c/>
  </view>
  <view class="list_item">
    <picker class="picker">
      允许帮人报名
    </picker>
    <switch type="switch" checked/>
  </view>
</view>
<view class="bg" style="margin-top:41rpx;">
  <textarea placeholder-style="font-size: 34rpx;letter-spacing:-0.8rpx;color:rgb(191,191,191);" style="padding:30rpx;" placeholder="填写报名须知" />
</view>
<button class="btn" type="primary">
  发布
</button>
<!--时间控件-->
<view class="" style="{{modalShowStyle}}">
  <view class="datatime">
    <view class="picker-btn">
      <view class="btn0 picker-alpha-btn" bindtap="touchCancel">取消</view>
      <view class="btn0 picker-beta-btn" bindtap="touchAdd">确定</view>
    </view>
    <picker-view indicator-style="height: 50px;" class="picker-view" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange">
      <picker-view-column>
        <view wx:for="{{years}}" style="line-height: 50px;">{{item}}</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:if="{{item<10}}" wx:for="{{months}}" style="line-height: 50px">0{{item}}</view>
        <view wx:if="{{item>9}}" wx:for="{{months}}" style="line-height: 50px">{{item}}</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:if="{{item<10}}" wx:for="{{days}}" style="line-height: 50px">0{{item}}</view>
        <view wx:if="{{item>9}}" wx:for="{{days}}" style="line-height: 50px">{{item}}</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:if="{{item<10}}" wx:for="{{hours}}" style="line-height: 50px">0{{item}}</view>
        <view wx:if="{{item>9}}" wx:for="{{hours}}" style="line-height: 50px">{{item}}</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:if="{{item<10}}" wx:for="{{minutes}}" style="line-height: 50px">0{{item}}</view>
        <view wx:if="{{item>9}}" wx:for="{{minutes}}" style="line-height: 50px">{{item}}</view>
      </picker-view-column>
    </picker-view>
  </view>
</view>


</scroll-view>