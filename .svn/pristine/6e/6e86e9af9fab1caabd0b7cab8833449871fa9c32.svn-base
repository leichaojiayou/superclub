/*手机号码弹框*/

.phone {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
  opacity: 0;
  transition: opacity 400ms ease-in;
  pointer-events: none;
  display: flex;
  justify-content: center;
  align-items: center;
}

.phone-dialog {
  position: fixed;
  top: 20%;
  width: 84%;
  background-color: #fff;
  border-radius: 6px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.phone-text {
  margin: 33rpx 40rpx 31rpx;
  font-size: 36rpx;
  text-align: center
}

.phone-box {
  position: relative;
  margin: 0 40rpx 25rpx;
}

.phone-input {
  display: inline-block;
  background: #fff;
  border-radius: 4px;
  border: 1px solid #e0e0e0;
  height: 70rpx;
  width: 100%;
}

.phone-button {
  text-align: center;
  width: 100%;
  margin-bottom: 30rpx;
}

.phone-btn {
  display: inline-block;
  padding: 0 90rpx;
  border-radius: 4px;
  margin: 0 10px;
}

.phone-cancel {
  color: #8e8e8e;
  background: #f5f5f5;
}

.phone-canadd {
  border: 1px solid #e5e7ed;
  background: rgb(61, 209, 165);
  color: #fff;
}