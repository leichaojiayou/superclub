
<!--pages/apply_paged/apply_paged.wxml-->
<scroll-view scroll-y="true" class="all_scr">

  <!--头图像-->

  <!--<view class="header_imgss">
    <swiper>
    <swiper-item><image src="../../../assets/images/Kitty.png"></image></swiper-item>
     <swiper-item><image src="../../../assets/images/Kitty.png"></image></swiper-item>
    </swiper>
    </view>-->

  <!--俱乐部封面-->
  <image class="header_imgss" src="{{cover}}" mode="aspectFill"></image>
  <view class="detail_con">

    <!--俱乐部title文字-->
    <view class="detail_title detail_title_lay">
      <text>{{actTitle}}</text>
    </view>

    <!--发布者信息、发布时间、阅读量、分享量-->
    <view class="des_txt detail_msg">
      <text>{{publishMan}}{{createTime}}</text>
      <view>
        <text style="margin-right:12px;"></text>
        <text style="margin-right:12px;">{{readNum}}</text>
        <text>{{shareNum}}</text>
      </view>
    </view>

    <!--活动地点item，当经纬度都为0时，不渲染-->
    <view class="detail_input" wx:if="{{hideActAddress}}">
      <text class="des_txt detail_txt">活动地点</text>
      <view class="detail_row_right">

        <!--活动地点-->
        <text>{{actAddress}}</text>

        <!--分割线-->
        <view class="detail_linev"></view>
        <view class="detail_lineh"></view>
      </view>
      <view class="detail_map">
        <image src="../../../assets/images/map.png" style="width:28rpx;height:34rpx"></image>
        <text class="des_txt">地图</text>
      </view>
    </view>

    <!--活动时间item-->
    <view class="detail_input">
      <text class="des_txt detail_txt">活动时间</text>
      <view class="detail_row_right">

        <!--时间-->
        <text>{{actTime}}</text>
        <view class="detail_lineh"></view>
      </view>
    </view>
    <view class="detail_input" wx:if="{{hideActCost}}">
      <text class="des_txt detail_txt">活动费用</text>
      <view class="detail_row_right">

        <!--费用-->
        <text class="green_txt">{{actCost}}</text>
        <view class="detail_lineh"></view>
      </view>
    </view>
    <view class="detail_input" wx:if="{{hideHost}}">

      <!--主办方-->
      <text style="letter-spacing:0.4em;" class="des_txt detail_txt">主办方</text>
      <view class="detail_row_right">
        <text>{{host}}</text>
      </view>

      <!--箭头-->
      <image src="../../../assets/images/right-errow.png" style="width:14px;height:17px" class="detail_map"></image>
    </view>
  </view>

  <!--详情 报名须知 费用循环-->
  <view class="sort">
    <text class="sort1" bindtap="changecolor" id="0" style="border-bottom:4px solid {{status==0?'rgb(61, 209, 164)':'rgb(246, 246, 246)'}};">详情
    </text>
    <text class="sort1" bindtap="changecolor" id="1" style="border-bottom:4px solid {{status==1?'rgb(61, 209, 164)':'rgb(246, 246, 246)'}};">报名须知
    </text>
    <text class="sort1" bindtap="changecolor" id="2" style="border-bottom:4px solid {{status==2?'rgb(61, 209, 164)':'rgb(246, 246, 246)'}};">费用
    </text>
  </view>

  <!--textarea-->
  <block wx:if="{{status==0}}">
    <view class="actDetail" wx:for="{{contents}}">
      <text wx:if="{{item.type==1}}" style="color:{{item.color}};font-size:{{item.size==1?'28rpx':'34rpx'}}" class="{{item.size==1?'font-size':''}}" class="{{item.underline==1?'font-underline':''}}" class="item.bold==1?'font-bold':''">{{item.value}}</text>
      <image class="detailPicture" mode="widthFix" wx:if="{{item.type==2}}" src="{{item.value}}" />
    </view>
  </block>
  <block wx:if="{{status==1}}">
    <view class="applyKnow">1111111</view>
  </block>
  <block wx:if="{{status==2}}">
    <view class="cost">222222222</view>
  </block>
</scroll-view>

<!--已报名 修改报名按钮-->
<view class="textarea_foot " bindtap="changebtn">
  <text class="txt_textarea ">已报名</text>
  <button type="primary " class="btn_textarea ">修改报名</button>
</view>