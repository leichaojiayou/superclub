<scroll-view scroll-y="true" style="height:100vh;">
<view class="body">

  <!-- 提示 -->
  <view class="hint">
    <image src="" class="icon"></image>
    <view style="line-height: 100rpx;">手机输入不方便？</view>
  </view>
  <view class="bg">

    <!-- 标题-->
    <view>
      <input  class="input_title" placeholder="输入活动主题" value="{{actop.title}}"/>
    </view>

    <!-- 内容 -->
    <scroll-view scroll-y="true" class="content_body">
      <view class="input_content">
        <block wx:for="{{contents}}" for-index="index">
          <image id="{{index}}" bindtap="delete" wx:if="{{item.type=='img'}}" src="{{item.text}}" mode="widthFix" style="width:100%;"></image>
          <text id="{{index}}" style="color:rgb({{item.color}});;font-weight:{{item.weight==true?'bold':'normal'}}" catchtap="con_tap" wx:if="{{item.type=='text'}}">{{item.text}}</text>
     
        </block>
      </view>
    </scroll-view>
  </view>
  <input value="{{test}}" catchblur="ok" placeholder="点击输入文字" bindinput="con_input" />

  <!-- 选择 -->
  <view class="choose" style="position:relative;">
    <view class="choose_color" hidden="{{isShowColor}}" bindtap="show_color">
      <view style="display:flex;" class="point1">
        <block wx:for="{{color}}" for-index="index">
          <view bindtap="choose_color" style="background:rgb({{item}});" id="{{index}}" class="point"></view>
        </block>
      </view>
    </view>
    <view style=" display: flex;">
      <image src="" bindtap="choose_img" class="icon"></image>
      <image src="" style="background:#{{isWeight==true?'696969':'eee'}};" class="icon_b" bindtap="choose_weight"></image>
      <image src="" class="icon"></image>
      <view style="background:rgb({{point_color}});" class="point" bindtap="show_color"></view>
    </view>
    <view style="line-height: 70rpx;color:rgb(89,215,176);">
      预览
    </view>
  </view>

  <!-- list -->
  <view class="bg">

    <!-- -->
    <view class="list_item">
      <picker mode="date" class="picker">
        活动开始时间
      </picker>
      <text> > </text>
    </view>

    <!-- -->
    <view class="list_item">
      <picker mode="date" class="picker">
        活动结束时间
      </picker>
      <text> > </text>
    </view>

    <!-- -->
    <view class="list_item">
      <view class="picker">
        活动地点
      </view>
      <text> 广东省广州市天河区天河软件园建中路66号 </text>
    </view>

    <!-- -->
    <view class="list_item">
      <view class="picker">
        活动封面
      </view>
      <text> > </text>
    </view>
  </view>
  <view class="bg">
    <view class="list_item">
      <view class="picker">
        活动费用
      </view>
      <text> > </text>
    </view>
  </view>

  <!-- 资料 -->
  <view class="bg">
    <view class="list_item">
      用户报名填写项
    </view>
    <view class="choose_user">
      <block wx:for="{{applyFields}}" for-index="index">
        <view id="{{index}}" bindtap="user_choose" style="color:rgb({{item.isCheck?'256,256,256':'89,215,176'}});background:rgb({{item.isCheck?'89,215,176':'256,256,256'}});" class="choose_user_item">{{item.text}}</view>
      </block>
    </view>
  </view>
  <view class="bg">
    <view class="list_item">
      <picker class="picker">
        更多报名设置
      </picker>
      <text> > </text>
    </view>
    <view class="list_item">
      <picker class="picker">
        报名截止时间
      </picker>
      <text> > </text>
    </view>
  </view>
  <view class="bg">
    <view class="list_item">
      <picker class="picker">
        活动类型
      </picker>
      <text> > </text>
    </view>
    <view class="list_item">
      <picker class="picker">
        短信通知
      </picker>
      <text> > </text>
    </view>
  </view>
  <view class="bg">
    <view class="list_item">
      <picker class="picker">
        报名人需审核
      </picker>
      <switch type="switch" c/>
    </view>
    <view class="list_item">
      <picker class="picker">
        允许帮人报名
      </picker>
      <switch type="switch" checked/>
    </view>
  </view>
  <view class="bg">
    <textarea style="padding:30rpx;" placeholder="填写报名须知" />
  </view>
  <button class="btn" type="primary">
    发布
  </button>
</view>
</scroll-view>