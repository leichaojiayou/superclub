<import src="../../template/common/common.wxml" />
<!--头部-->
<scroll-view scroll-y="true" style="height:100vh;">
<view class="head">

  <!--头像-->
  <image class="head_img" mode="aspectFill" src="{{msg.head_img}}"></image>
  <view class="head_txt" bindtap="nato_myaccount">

    <!--名称-->
    <text class="head_name" style="margin-bottom:15px;">{{msg.name}}</text>
    <text class="des_txt"  style="margin-bottom:5px;">{{msg.head_signname}}</text>
    <block wx:if="{{msg.head_id !=''}}">
    <text class="des_txt">已绑定账号:{{msg.head_id}}</text>
    </block>
    <block wx:else>
     <text class="des_txt">未绑定账号</text>
    </block>
  </view>

  <!--右箭头-->
  <image src="../../assets/images/right-errow.png" class="right_errow" mode="aspectFill"></image>
</view>
<!--我的钱包 xx俱乐部会长-->
<view class="container">
  <!--我的钱包-->
  <view class="con_row" style="border-bottom: 1px solid rgb(229, 229, 229);">
    <view class="center">
    <image src="../../assets/images/wallet.png" class="con_img"></image>
    <text class="head_name">我的钱包</text>
    </view>
    <image src="../../assets/images/right-errow.png" class="right_errow2" mode="aspectFill"></image>
    
  </view>
  <!--后台-->
  <view class="con_row"  bindtap="navBackstage">
    <view class="center">
    <image src="../../assets/images/chef.png" class="con_img"></image>
    <text class="head_name">{{msg.clubname}}俱乐部会长</text>
    </view>
    <view  class="center">
      <!--后台-->
      <view wx:if="{{status==1}}" class="txt_stat">
      <text class="des_txt2">{{stat}}</text>
      </view>
      <view wx:if="{{status==0}}"  class="txt_stat">
      <text class="des_txt2">{{stat1}}</text>
      </view>
      <image src="../../assets/images/right-errow.png" class="right_errow2" mode="aspectFill"></image>
    </view>
  </view>
</view>
<!--报名记录-->
<view class="container">
  <view class="container_title con_title">
    <text>报名记录</text>
    <text class="con_total des_txt">共报名{{msg.signed}}场活动</text>
  </view>
  <template is="common_two" data="{{item3,item4,item5}}"/>

  <template is="common_two" data="{{item3,item4,item5}}"/>
  <view style="text-align:center;font-size:12px;color:rgb(229,229,229);margin-bottom:30px;">
    <text>THE END</text>
  </view>
</view>

</scroll-view>