<scroll-view scroll-y="true" style="height:100vh;">
  <view style="height:31rpx;"></view>

  <!--header-->
  <view class="header">
    <text class="t32rpx">提现</text>
    <text class="t38rpx">{{info.amount}}</text>
  </view>

  <!--body-->
  <view class="body">

    <!--提现至-->
    <view class="body_item">
      <text class="t28rpx">提现至</text>
      <text class="t28rpx">{{info.accountName}}</text>
    </view>

    <!--提现账户-->
    <view class="body_item">
      <text class="t28rpx">提现账户</text>
      <text class="t28rpx">{{info.accountNo}}</text>
    </view>

    <!--创建时间-->
    <view class="body_item">
      <text class="t28rpx">创建时间</text>
      <text class="t28rpx">{{info.createTimeStr}}</text>
    </view>

    <!--状态-->
    <view class="body_item">
      <text class="t28rpx">状态</text>
      <text wx:if="{{info.applyStatus==1}}" class="t28rpx" style="color:rgb(255,112,68)">正在审核</text>
      <text wx:elif="{{info.applyStatus==2}}" class="t28rpx" style="color:rgb(61,209,165)">已打款</text>
      <text wx:elif="{{info.applyStatus==3}}" class="t28rpx" style="color:rgb(255,63,49)">审核未通过</text>
    </view>
  </view>

  <!--foot-->
  <view class="foot">

    <!--绿色线条-->
    <view class="greenpoint"></view>
    <view class="greenline"></view>

    <!--右边框-->
    <view class="foot_item">
      <view>
        <text class="t28rpx">{{info.apply[0].name}}</text>
      </view>
      <text class="t22rpx">{{info.apply[0].timeStr}}</text>
      <image wx:if="{{info.apply[1].status==3}}" class="icon" src="https://cdn.51julebu.com/xiaochengxu/image/shbtg@2x.png" />
      <image wx:else class="icon" src="https://cdn.51julebu.com/xiaochengxu/image/shtg@2x.png" />

      <!--文字-->
      <view style="margin-top:77rpx;">
        <text class="t28rpx">{{info.apply[1].name}}</text>
      </view>
      <text class="t22rpx">{{info.apply[1].timeStr}}</text>
    </view>
  </view>
</scroll-view>