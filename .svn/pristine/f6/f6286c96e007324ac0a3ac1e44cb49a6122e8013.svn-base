<!-- title -->
<block wx:for="{{lists}}" for-index="index">
  <view class="list" id="{{index}}" bindtap="choose">
    <view class="triangle">
      <view class="{{item.isShow?'css_icon_true':'css_icon_false'}}">
      </view>
    </view>
    <view class="list_text">
      {{item.title}}
    </view>
  </view>

  <!-- item -->
  <view hidden="{{!item.isShow}}">
    <view class="item">
      <view class="item_point"></view>
      <view style="margin:35rpx 0rpx 0rpx 19rpx;">
        <view class="item_top">
          <view class="item_name">用户名</view>
          <view class="item_name_text">+250.00</view>
        </view>
        <view class="item_top">
          <view class="item_time">07月11日 12:37</view>
          <view class="item_time">票价名称</view>
        </view>
      </view>
    </view>

    <!-- item -->
    <view class="item">
      <view class="item_point"></view>
      <view style="margin:35rpx 0rpx 0rpx 19rpx;">
        <view class="item_top">
          <view class="item_name">用户名</view>
          <view class="item_name_text">+250.00</view>
        </view>
        <view class="item_top">
          <view class="item_time">07月11日 12:37</view>
          <view class="item_time">票价名称</view>
        </view>
      </view>
    </view>
  </view>
</block>

