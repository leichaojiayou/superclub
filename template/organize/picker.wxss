/*时间控件*/

.picker-view-big {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  /*transition: opacity 400ms ease-in;*/
}

.picker-view {
  background: #fff;
}

.pickerdata {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}

.pickerdata picker-view-column view {
  text-align: center;
}

.picker-btn {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 40%;
  display: flex;
  justify-content: space-between;
  background: #fff;
}

.btn {
  padding: 14rpx 14rpx;
}

.picker-alpha-btn {
  color: #8e8e8e;
}

.picker-beta-btn {
  color: #008000;
}