.nd_header {
  margin: 0 3.3% 0 3.3%;
}

.nd_img {
  background-color: rgb(241, 241, 241);
  width: 154rpx;
  height: 154rpx;
  flex-shrink: 0;
}

/*潍坊市马拉松运动协会2017黄河口东营-国。。样式*/

.nd_name {
  white-space: normal;
  letter-spacing: -0.4px;
  line-height: 22px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 32rpx;
}

/*票价名称样式*/

.nd_time {
  color: rgb(191, 191, 191);
  margin-top: 0.9%;
}

/*名额保留时间*/

.it_remain {
  font-size: 26rpx;
  letter-spacing: -0.3pt;
  color: rgb(255, 126, 86);
  white-space: normal;
}

/*报名费用样式*/

.money {
  color: rgb(61, 209, 161);
  white-space: nowrap;
}

/*取消报名 修改报名 去支付 这整一框*/

.it_all {
  position: absolute;
  right: 30rpx;
}

/*取消报名 修改报名 去支付 每一格的样式*/

.it {
  display: flex;
  align-items: center;
  border-style: solid;
  border-width: 1px;
  height: 54rpx;
  width: 125rpx;
  border-radius: 6rpx;
  justify-content: center;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.it_all, .it, .nd_header, .sort, .nd_time {
  display: flex;
  align-items: center;
}

.it_all_txt {
  font-size: 24rpx;
  line-height: 48.2rpx;
  letter-spacing: -0.6rpx;
}

.sort, .nums, .nd_time {
  font-size: 26rpx;
}

.money {
  font-size: 30rpx;
}

.common2 {
  background: #fff;
}

.body_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.3%;
}

.it_bottom {
  padding: 0 0 30rpx 0;
  height: 57rpx;
  display: flex;
  align-items: center;
}
