  <!--真实数据的分组列表-->
  <view class="mid_view">
    <view class="checkbox_view">
      <icon bindtap="clickAll" class="group_icon" size="26" type="{{checkbox_allStatus ? 'success' : 'circle'}}" style="{{statu==2 ? 'opacity:0.4' : ''}}"
      />
      <text class="checkbox_text_view">{{page.checkbox_all_text}}</text>
    </view>
    <view wx:for="{{groups}}" wx:key="group_key" wx:for-index="group_index" class="group_view">
      <view bindtap="" class="checkbox_view">
        <icon bindtap="clickGroup" data-id="{{group_index}}" class="group_icon" size="26" type="{{item.group_Status ? 'success' : 'circle'}}"
          style="{{statu==2 ? 'opacity:0.4' : ''}}" />
        <text class="checkbox_text_view">{{item.groupName}}</text>
      </view>
      <view wx:for="{{item.applys}}" wx:key="key" wx:for-index="item_index" bindtap="" class="checkbox_group_view">
        <icon bindtap="clickChild" data-group="{{group_index}}" data-id="{{item_index}}" class="item_icon" size="26" type="{{item.check_Status ? 'success' : 'circle'}}"
          style="{{statu==2 ? 'opacity:0.4' : ''}}" />
        <view class="item_mid_view">
          <image class="item_img" src="{{item.user.userImg}}"></image>
          <view class="item_right_view">
            <text>{{item.user.nick}}</text>
            <text wx:if="{{item.helper != null && item.helper != ''}}" class="smart_text_size">{{item.helper}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
  <button bindtap="{{Setting ? 'clickNext' : ''}}" wx:if="{{statu==1}}" class="button" style="{{Setting ?  '': 'background-color: rgba(61, 209, 164, 0.4);' }}">下一步</button>
</scroll-view>