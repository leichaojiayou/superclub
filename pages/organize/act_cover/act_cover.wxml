<scroll-view scroll-y="true" style="height:100vh;">
<!--pages/huodongfengmian/huodongfengmian.wxml-->
<!--徒步-->
<view class="body">
  <view class="body_item1">
    <view class="txt_position">
      <text class="t34rpx">徒步</text>
    </view>
  </view>

  <!--循环体样式-->
  <view class="body_item">

    <!--循环指令-->
    <view wx:for="{{walks}}" wx:for-item="walk" wx:for-index="item_index" id="walks_{{item_index}}" bindtap="enterPreviewMode">
      <!--开始循环图片-->
      <image src="{{walk.img}}" class="img" mode="aspectFill" ></image>
    </view>
  </view>
</view>
<!--骑行-->
<view class="body">
  <view class="body_item1">
    <view class="txt_position">
      <text class="t34rpx">骑行</text>
    </view>
  </view>

  <!--循环体样式-->
  <view class="body_item">

    <!--循环指令-->
    <view wx:for="{{rides}}" wx:for-item="ride" wx:for-index="item_index" id="rides_{{item_index}}" bindtap="enterPreviewMode">

      <!--开始循环图片-->
      <image src="{{ride.img}}" class="img" mode="aspectFill" bindtap="enterPreviewMode"></image>
    </view>
  </view>
</view>
<!--跑步-->
<view class="body">
  <view class="body_item1">
    <view class="txt_position">
      <text class="t34rpx">跑步</text>
    </view>
  </view>

  <!--循环体样式-->
  <view class="body_item">

    <!--循环指令-->
    <view wx:for="{{runs}}" wx:for-item="run" wx:for-index="item_index" id="runs_{{item_index}}" bindtap="enterPreviewMode">

      <!--开始循环图片-->
      <image src="{{run.img}}" class="img" mode="aspectFill" bindtap="enterPreviewMode"></image>
    </view>
  </view>
</view>

<!-- 预览模式 -->
<swiper class="swiper-container" duration="400" current="0" bindtap="leavePreviewMode" style="display:{{previewMode?'block':'none'}};">
    <swiper-item>
      <image src="{{modelImgSrc}}" mode="aspectFit"></image>
    </swiper-item>
</swiper>
<view style="position:fixed;bottom:20px;left:20px;z-index:10000;color:#fff;display:{{previewMode ? 'block' : 'none'}};" bindtap="leavePreviewMode">取消</view>
<view style="position:fixed;bottom:20px;right:20px;z-index:10000;color:#fff;display:{{previewMode ? 'block' : 'none'}};" bindtap="choseActCover">确定</view>
</scroll-view>