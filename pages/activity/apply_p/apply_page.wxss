@import "../../../template/toasts/toasts.wxss";
@import "../../../template/drawer/drawer.wxss";

/*一个大框*/
page{
    padding-bottom: 94rpx;
}
.bigview {
    font-size: 16px;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    border-top: 1rpx solid rgb(229, 229, 229);
    /*border-bottom: 1rpx solid rgb(229, 229, 229);*/
}

/*大框里面item框*/

.itemView {
    margin-left: 5%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 110rpx;
    border-bottom: 1rpx solid rgb(229, 229, 229);
}

/*item框中的脚*/

.itemView_foot {
    margin-right: 5%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.foot_text_view {
    margin-right: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
}

.itemView_foot input {
    margin-right: 5%;
    text-align: right;
}

/*大框里面foot框*/

.itemView_foot input {
    text-align: right;
}

/*大框里面最后一个foot框*/

.last_view {
    margin-left: 5%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    height: 115px;
    margin-top: 20px;
}

.last_view textarea {
    margin-top: 8px;
    width: 80%;
}

/*按钮框*/

.buttonview {
    width: 100%;
    margin-top: 40rpx;
}

.apply-btn{
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 94rpx;
    border-radius: 0;
    z-index: 99;
    line-height: 94rpx;
}
.apply-btn::after{
    border: 0;
}

.button1 {
    background-color: rgb(61, 209, 164);
    color: rgb(255, 255, 255);
}

.button2 {
    border: 0.5px solid rgb(214, 213, 214);
    background-color: rgb(251, 250, 252);
    color: rgb(26, 26, 26);
    margin-top: 15px;
}

/*图片框*/

.itemView_foot image {
    width: 21px;
    height: 21px;
    opacity: 0.5;
}

/*占位字符样式*/

.psection {
    text-align: right;
    color: rgb(191, 191, 191);
}

/*大字体*/

.bigsize {
    font-size: 34rpx;
}

/*小字体*/

.smartsize {
    font-size: 24rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: rgb(141, 141, 141);
}

.picker {
    display: flex;
    flex-direction: row;
}

.blur {
    opacity: 0.3;
}

.help-apply {
    padding: 40rpx 34rpx 40rpx 0;
    margin-left: 34rpx;
    border-bottom: 1rpx solid #e6e6e6;
}

.help-apply-title {
    padding-bottom: 30rpx;
}

.help-apply-placeholder {
    color: rgb(191, 191, 191);
    font-size: 32rpx;
}

.help-apply-box {
    display: flex;
    justify-content: center;
    align-items: center;
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
    width: 100%;
    height: 88rpx;
    background: #fff;
    color: #3dd1a5;
    font-size: 36rpx;
    border-radius: 0;
    margin-bottom: 38rpx;
}

.apply-agree {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 40rpx;
    font-size: 26rpx;
    color: #262626;
    margin-bottom: 41rpx;
}

.apply-aggree-img {
    width: 24rpx;
    height: 24rpx;
    margin-right: 9rpx;
}

.batten {
    padding: 0 30rpx 16px 30rpx;
    white-space: normal;
}

.cost-content {
    flex-flow: wrap;
    display: flex;
    flex-direction: column;
}

.cost-content-title {
    font-size: 28rpx;
    flex: 1;
}

.cost-content-amount {
    color: gray;
    font-size: 24rpx;
    padding-top: 10rpx;
}

.cost-content-money {
    color: #3dd1a5;
    padding: 0 30rpx 0 0;
}

.cost-content-choose {
    width: 36rpx;
    height: 36rpx;
    padding-right: 40rpx
}
.base-style{
    color: rgb(191, 191, 191);
    min-width: 450rpx;
    text-align: right;
}
.drawer-choose-theme{
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
    letter-spacing: -0.8rpx;
    color: #1a1a1a;
    height: 94rpx;
    border-bottom: 1rpx solid #e5e5e5;
    position: relative;
}
.drawer-close-icon{
    position: absolute;
    top: 0;
    right: 0;
    width: 34rpx;
    height: 34rpx;
    padding: 30rpx;
}
.min-width{
    min-width: 450rpx;
    text-align: right;
}
.help-apply-status{
    display:flex;
    justify-content: space-between;
    align-items: center;
    height: 88rpx;
    padding: 0 40rpx 0 32rpx;
    border-bottom: 1rpx solid #e5e5e5;
}

.help-apply-icon{
    width: 28rpx;
    height: 28rpx;
    margin-right: 8rpx
}
.help-apply-txt{
    font-size: 28rpx;
    color: #8e8e8e;
}
.help-delete{
    display:flex;
    align-items: center;
    font-size: 28rpx;
    color: #5a5a5a;
}
.red{
    color: rgb(255, 55, 55);
}
.help-apply-img{
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}
.help-apply-line{
    width: 2rpx;
    height: 30rpx;
    background: #e5e5e5;
    margin-right: 40rpx;
}