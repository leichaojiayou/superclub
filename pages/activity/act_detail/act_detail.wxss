/*引用报名列表模版css*/
@import "../../../template/activity/applyed.wxss";
@import "../../../template/activity/act_comment.wxss";
@import "../../club/clubhome/clubhome.wxss";
@import "../../../template/toasts/toasts.wxss";

page {
  background: #f5f5f5;
}

.dialog {
  /*透明蒙层*/
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  z-index: 1000;
  color: #fff;
}

.dialog_content {
  /*评论输入框内容*/
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 2000;
  background: #e6e6e6;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  height: 110rpx;
  padding-left: 21rpx;
}

.dialog-content-input {
  flex: 1;
  height: 80rpx;
  background: #fff;
  border-radius: 10rpx;
}

.dialog-content-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 149rpx;
  height: 80rpx;
  margin: 0 22rpx 0 20rpx;
  padding: 0;
  background: #3dd1a5;
  color: #fff;
}

.header_imgss {
  width: 100%;
  height: 350rpx;
  opacity: 85%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.imgss {
  width: 348rpx;
  height: 85rpx;
}

.detail_title_lay {
  white-space: normal;
  padding: 38rpx 0 30rpx 0;
}

.detail_con, .detail_map {
  display: flex;
  flex-direction: column;
}

.detail_con {
  background-color: #fff;
  padding: 0 31rpx;
}

.detail_msg, .detail_input {
  display: flex;
  flex-direction: row;
}

.detail_msg {
  justify-content: space-between;
  margin-bottom: 20rpx;
  color: #bfbfbf;
}

.detail_input {
  /*活动地点、活动时间等item*/
  position: relative;
  align-items: center;
  padding: 31rpx 0;
}

.detail_txt {
  /*item左侧描述*//*margin-right: 54rpx;*/
  flex-shrink: 0;
  font-size: 28rpx;
  letter-spacing: 2rpx;
}

.detail_map {
  /*查看地图按钮*//*position: absolute;
  right: 8rpx;*/
  align-items: center;
  margin-left: 39rpx;
  /*bottom: 17rpx;*/
}

.detail_row_right {
  /*item右侧详情*/
  display: flex;
  align-items: center;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  margin-left: 54rpx;
}

.detail_lineh {
  position: absolute;
  right: -31rpx;
  bottom: 0;
  width: 80%;
  border-bottom: 1rpx solid rgb(230, 230, 230);
}

.detail_linev {
  /*地图按钮与地址描述之间的丨线*/
  border-left: 1rpx solid rgb(230, 230, 230);
  height: 56rpx;
}

.map_txt {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: rgb(191, 191, 191);
}

.sort {
  /*详情 报名须知 费用循环属性*/
  display: flex;
  height: 98rpx;
  align-items: center;
  font-size: 28rpx;
  letter-spacing: -0.6rpx;
  justify-content: space-around;
  background-color: rgb(245, 245, 245);
  bottom: 0rpx;
}

.divider{
  width: 100%;
  height: 1rpx;
  background-color: rgb(230, 230, 230);
}

.sort1 {
  /*详情 报名须知 费用循环各个item属性*//*padding: 11rpx;*/
  margin-top: 10rpx;
  text-align: center;
  padding: 0 40rpx;
}

.actDetail, .applyKnow, .cost {
  /*活动详情、报名须知、费用 页面*/
  background-color: rgb(255, 255, 255);
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 40rpx;
}

/*textarea里面的样式*/

.textarea1 {
  white-space: normal;
  /*height: 116.5px;*/
  width: 90%;
  overflow: scroll;
  font-size: 17px;
  line-height: 25px;
  letter-spacing: -0.4px;
  color: rgb(17, 17, 17);
}

.all_scr {
  height: 90vh;
  background-color: white;
}

.textarea_foot {
  /*已报名 ,修改报名大框*/
  display: flex;
  letter-spacing: -0.4px;
  color: rgb(142, 142, 142);
  font-size: 17px;
  position: relative;
  bottom: 0px;
  justify-content: space-between;
  border-top: 1rpx solid rgb(230, 230, 230);
  opacity: 0.95;
  align-items: center;
  height: 10vh;
  background-color: rgb(255, 255, 255);
}

.txt_textarea {
  padding-left: 5%;
}

.btn_textarea {
  position: absolute;
  right: 5%;
  margin-top: 4rpx;
}

.detailPicture {
  /*详情图片*/
  width: 690rpx;
  margin-top: 33rpx;
}

.actAddress {
  /*活动地点文字*/
  padding: 0 90rpx 0 0;
}

.paddingLR {
  /*padding左右各30rpx*/
  padding: 0 30rpx 0 30rpx;
}

.act_contents {
  /*活动内容解析样式*/
  margin-bottom: 10rpx;
}

.applyed_title, .comment_title {
  /*已报名title*/
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  padding: 15px;
  align-items: center;
  background-color: rgb(245, 245, 245);
}

.applyed, .comment_text, .comment_button {
  /*“已报名”、“评论”文字样式*/
  font-size: 34rpx;
  letter-spacing: -0.8rpx;
}

.surplus_apply {
  /*剩余名额 样式*/
  color: rgb(142, 142, 142);
  font-size: 26rpx;
  letter-spacing: -0.6rpx;
}

.deadlineTime {
  /*报名截止时间*/
  font-size: 24rpx;
  letter-spacing: -0.6rpx;
  color: rgb(142, 142, 142);
  text-align: center;
  padding: 30rpx 0 30rpx 0;
  background: #f5f5f5;
}

.textarea1_case_money {
  font-size: 48rpx;
  letter-spacing: -1rpx;
  color: rgb(61, 209, 164);
  margin-left: 44rpx;
  white-space: nowrap;
}

/*底部按钮*/

.bottom {
  display: flex;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 124rpx;
  justify-content: space-between;
  align-items: center;
  background: rgb(255, 255, 255);
  border-top: 1rpx solid #e6e6e6;
}

.textarea1_case_titxt2 {
  font-size: 26rpx;
  letter-spacing: -0.6rpx;
  color: rgb(142, 142, 142);
}

.textarea1_case_sign {
  font-size: 34rpx;
  letter-spacing: -1rpx;
  color: rgb(255, 255, 255);
  background-color: rgb(61, 209, 164);
  height: 88rpx;
  width: 200rpx;
  border-radius: 10rpx;
  margin-right: 23rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.textarea_com {
  padding: 15px 15px 5px 15px;
  background-color: rgb(255, 255, 255);
}

.textarea_com_right {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 13px 0 0 15px;
}

.textarea_com_right_text {
  word-break: break-all;
  white-space: normal;
  background-color: rgb(255, 255, 255);
  font-size: 15px;
  letter-spacing: -0.4px;
  text-align: justify;
  line-height: 22px;
  padding: 0 15px 15px 70px;
  border-bottom: 1rpx solid rgb(230, 230, 230);
}

