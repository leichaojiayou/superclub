}

.money {
  display: flex;
  align-items: center;
  justify-content: center;
}

.t44rpx {
  font-size: 44rpx;
  line-height: 14.4rpx;
  letter-spacing: -1rpx;
  color: rgb(61, 209, 164);
}

.line2_item {
  display: flex;
  justify-content: space-between;
  margin-left: 21rpx;
}

.line2 {
  /*margin-top: 42rpx;*/
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-left: 12rpx solid rgb(61, 209, 164);
}

.line3 {
  display: flex;
  margin-top: 89rpx;
  flex-direction: column;
}

.txt {
  white-space: normal;
  display: flex;
  margin-top: 37rpx;
}

.t34rpx_1 {
  font-size: 34rpx;
