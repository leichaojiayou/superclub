<scroll-view style="height:100vh;" scroll-y="true">
<!--//交易记录-->
<view class='big_view' wx:if="{{statu==1 }}">

  <!--活动付款-->
  <view class='item_view'>
    <view class='item_top_view'>
      <text class='bigsize_text'>{{page1.payment_text}}</text>
      <text class='price_text' style="color: rgb(27, 27, 27);">{{page1.payment_price}}</text>
    </view>
    <view class='item_mid_view'>
      <text class='midsize_text'>{{page1.activity_text}}</text>
      <text style="font-size: 22rpx;color: rgb(26, 26, 26);">{{page1.payment_name_text}}</text>
    </view>
    <view class='item_bottom_view'>
      <text class='date_text'>{{page1.activity_date}}</text>
    </view>
  </view>

  <!--收款-->
  <view class='item_view'>
    <view class='item_top_view'>
      <text class='bigsize_text'>{{page1.receipt_text}}</text>
      <text class='price_text' style="color: rgb(61, 209, 164);">+{{page1.receipt_price}}</text>
    </view>
    <view class='item_mid_view'>
      <text class='midsize_text'>{{page1.receipt_user}}</text>
    </view>
    <view class='item_bottom_view'>
      <text class='date_text'>{{page1.activity_date}}</text>
    </view>
  </view>

  <!--提现-->
  <view class='item_view' style="border-bottom: 0">
    <view class='item_top_view'>
      <text class='bigsize_text'>{{page1.withdraw_text}}</text>
      <text class='price_text' style="color: rgb(255, 126, 86);">-{{page1.withdraw_price}}</text>
    </view>
    <view class='item_mid_view'>
      <text class='midsize_text'>{{page1.withdraw_bank}}</text>
    </view>
    <view class='item_bottom_view'>
      <text class='date_text'>{{page1.withdraw_date}}</text>
    </view>
  </view>
</view>

<!--交易记录-活动收款-->
<view  wx:if="{{statu==2}}">
<!--top-->
<view class='big_view' wx:if="{{statu==2}}">
  <view class='item_view' style="border-bottom: 0">
    <view class='item_top_view' style="margin-top: 29rpx;">
      <text class='bigsize_text'>{{page2.user_text}}</text>
    </view>
    <view class='item_mid_view' style="margin-bottom: 30rpx;">
      <text class='midsize_text'>{{page2.activity_text}}</text>
    </view>
  </view>
</view>

<!--mid-->
<view class='big_view' wx:if="{{statu==2}}" style="margin-top: 39rpx;">
  <view class='item_view' style="border-bottom: 0">
    <view class='item_top_view'>
      <text class='bigsize_text' style="letter-spacing:40rpx;">{{page2.payment_text}}</text>
      <text class='price_text' style="margin-left: 29rpx;color: rgb(61, 209, 165);">+{{page2.payment_price}}</text>
    </view>
    <view class='item_mid_view'>
      <text class='midsize_text'>{{page2.payment_user_text}}</text>
      <text style="margin-left: 33rpx;font-size: 28rpx;color: rgb(26, 26, 26);">{{page2.payment_price}}</text>
    </view>
    <view class='item_mid_view'>
      <text class='midsize_text'>{{page2.order_text}}</text>
      <text style="font-size: 28rpx;color: rgb(26, 26, 26);">{{page2.order_number}}</text>
    </view>
    <view class='item_mid_view'>
      <text class='midsize_text'>{{page2.payment_way_text}}</text>
      <text style="font-size: 28rpx;color: rgb(26, 26, 26);">{{page2.payment}}</text>
    </view>
    <view class='item_mid_view'>
      <text class='midsize_text'>{{page2.payment_Rate_text}}</text>
      <text style="font-size: 28rpx;color: rgb(26, 26, 26);">-{{page2.payment_Rate}}元</text>
    </view>
    <view class='item_mid_view'>
      <text class='midsize_text'>{{page2.subsidy_text}}</text>
      <text style="font-size: 28rpx;color: rgb(26, 26, 26);">+{{page2.subsidy}}元</text>
    </view>
    <view class='item_mid_view'>
      <text class='midsize_text'>{{page2.pay_time_text}}</text>
      <text style="font-size: 28rpx;color: rgb(26, 26, 26);">{{page2.pay_time}}</text>
    </view>
    <view class='item_mid_view'>
      <text class='midsize_text'>{{page2.transaction_text}}</text>
      <text style="font-size: 28rpx;color: rgb(26, 26, 26);">{{page2.transaction}}</text>
    </view>
    <view class='item_bottom_view'>
      <text class='midsize_text'>{{page2.accounts_receivable_text}}</text>
      <text style="font-size: 28rpx;color: rgb(26, 26, 26);">{{page2.accounts_receivable}}</text>
    </view>
  </view>
</view>
</view>
<!--交易记录-多人-->
<view  wx:if="{{statu==3}}">

  <!--top-->
  <view class='big_view' wx:if="{{statu==3}}">
    <view class='item_view' style="border-bottom: 0">
      <view class='item_top_view' style="margin-top: 30rpx;">
        <text class='bigsize_text'>{{page3.activity_text}}</text>
      </view>
      <view class='item_mid_view' style="margin-bottom: 29rpx;">
        <text class='midsize_text3' style="font-size: 24rpx;">{{page3.activity_date}}</text>
      </view>
    </view>
  </view>
  <view class="item_top_view" style="margin-top: 20rpx;" wx:if="{{statu==3}}">
    <text class="bigsize_text" style="font-size: 26rpx;">{{page3.total_text}}</text>
  </view>

  <!--mid-->
  <view class='big_view' wx:for="{{page3.activity_payment_list}}" wx:if="{{statu==3}}" style="margin-top: 18rpx;">
    <view class='item_view' style="border-bottom: 0">
      <view class='item_top_view'>
        <text class='midsize_text3' style="line-height: 44rpx;color: rgb(26, 26, 26);">{{item.payment_text}}</text>
        <text class='price_text' style="line-height: 56.6rpx;color: rgb(27, 27, 27);">{{item.payment_price}}</text>
      </view>
      <view class='item_mid_view'>
        <text class='midsize_text3'>{{item.order_text}}</text>
        <text class='midsize_text3'>{{item.order_number}}</text>
      </view>
      <view class='item_mid_view'>
        <text class='midsize_text3'>{{item.user_information_text}}</text>
        <text class='midsize_text3'>{{item.user_text}}</text>
      </view>
      <view class='item_mid_view'>
        <text class='midsize_text3'>{{item.payment_way_text}}</text>
        <text class='midsize_text3'>{{item.payment}}</text>
      </view>
      <view class='item_mid_view'>
        <text class='midsize_text3'>{{item.pay_time_text}}</text>
        <text class='midsize_text3'>{{item.pay_time}}</text>
      </view>
      <view class='item_mid_view'>
        <text class='midsize_text3'>{{item.transaction_text}}</text>
        <text class='midsize_text3'>{{item.transaction}}</text>
      </view>
      <view class='item_bottom_view'>
        <text class='midsize_text3'>{{item.accounts_receivable_text}}</text>
        <text class='midsize_text3'>{{item.accounts_receivable}}</text>
      </view>
    </view>
  </view>
  <view style="height:100rpx; "></view>
</view>
</scroll-view>