
<!--未点击的列-->
<scroll-view style="height:90vh;" scroll-y="true">
  <block wx:for-index="idx" wx:for="{{applys}}" wx:for-item="obj">
    <view wx:if="{{!obj.open}}" bindtap="tapRowForDisplay" id="{{idx}}" data-item="{{idx}}" class="list_view1">
      <view class="image_view">
        <image class="user_image" src="{{obj.user.userImg}}"></image>
      </view>
      <view class="user_info_top">
        <view class="user_info_name_top">
          <text style="font-size: 32rpx;">{{obj.user.nick}}</text>
          <text class="small_text" wx:if="{{obj.isManagerHelp}}">{{obj.helper.nick}}帮报</text>
        </view>
        <text style="font-size: 26rpx;margin-top: 11rpx;">{{obj.ticketName}}￥{{obj.price}}</text>
      </view>
    </view>

    <!--点击后的列-->
    <view wx:if="{{obj.open}}" class="list_view2">
      <view bindtap="tapRowForDisplay" id="{{idx}}" data-item="{{idx}}" class="list_view2_top">
        <view class="image_view">
          <image class="user_image2" src="{{obj.user.userImg}}"></image>
        </view>
        <view class="user_info_top2">
          <view class="user_info_name_top">
            <text style="font-size: 32rpx;">{{obj.user.nick}}</text>
            <text class="small_text" wx:if="{{obj.isManagerHelp}}">{{obj.helper.nick}}帮报</text>
          </view>
          <text style="font-size: 26rpx;margin-top: 11rpx;">{{obj.ticketName}}￥{{obj.price}}</text>
          <text class="small_text" style="margin-top: 11rpx;">{{obj.payType}}</text>
          <text class="small_text" style="font-size: 26rpx;margin-top: 37rpx;">{{obj.user_real_name}}</text>
          <text class="small_text" style="font-size: 26rpx;margin-top: 20rpx;">{{obj.people_id}}</text>
          <text class="small_text" style="white-space:normal;font-size: 26rpx;margin-top: 19rpx;">{{obj.content}}</text>
        </view>
      </view>
      <view class="user_foot_view">
        <text class="list_item_text" style="{{obj.button_text1=='审核' ? 'color: rgb(255, 126, 86);':''}}">分组</text>
        <text class="list_item_text">编辑</text>
        <text class="list_item_text">电话</text>
        <text class="list_item_text">短信</text>
      </view>
    </view>
  </block>
  <view style="height:150rpx;"></view>
</scroll-view>

<view>
  <button class="btn" bindtap="tapEditGroupName">编辑分组</button>
</view>